{
  "type": "LinearLayout",
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "match_parent",
  "component_list": [

    {
      "type": "TextView",
      "layout_width": "match_parent",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Termux/sftp home directory:"
    },

    {
      "type": "TextView",
      "id": 991000,
      "layout_width": "match_parent",
      "sftp": "pwd",
      "text_color": "#ffffff",
      "text_size": "20",
      "gravity": "left",
      "background_color": "#000000",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      }
    },

    {
      "type": "TextView",
      "layout_width": "match_parent",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "git working directory: \n(relative to sftp home directory)"
    },

    {
      "type": "EditText",
      "id": 991001,
      "max_length": 200,
      "is_single_line": true,
      "layout_width": "match_parent",
      "text": "git-repos/eigenframe",
      "text_color": "#ffffff",
      "text_size": "20",
      "gravity": "left",
      "background_color": "#000000",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      }
    },

    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },

    {
      "type": "Button",
      "layout_width": "match_parent",
      "text": "Show git working directory",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "gravity": "center",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title_script": "'directory ' + eigenFragment.getViewState(991000) + '/' + eigenFragment.getViewState(991001)",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "text_size": "14",
                "gravity": "left",
                "text_color": "#ffffff",
                "sftp_script": "'directory ' + eigenFragment.getViewState(991000) + '/' + eigenFragment.getViewState(991001)"
              }
            ]
          }
        ]
      }
    },

    {
      "type": "Button",
      "layout_width": "match_parent",
      "text": "ListView",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "gravity": "center",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title_script": "'ListView ' + eigenFragment.getViewState(991000) + '/' + eigenFragment.getViewState(991001)",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "component_list": [
              {
                "type": "ListView",
                "layout_width": "match_parent",
                "background_color": "#123456",
                "sftp_script": "'list subdir '+eigenFragment.getViewState(991000) + '/' + eigenFragment.getViewState(991001)",
                "on_click": {
                  "type": "JavaScript",
                  "script_list": [
                    "var pos = eigenFragment.getOptionPosition()",
                    "var opt = eigenFragment.getOptionLabel()",
                    "eigenActivity.showToast('ListView row selected: '+ pos + ' - ' + opt)"
                  ]
                },
                "item_layout": {
                  "type": "LinearLayout",
                  "orientation": "horizontal",
                  "gravity": "center_vertical",
                  "component_list": [
                    {
                      "type": "Button",
                      "text_script_list": [
                        "eigenFragment.getOptionPosition() + ': ' + eigenFragment.getOptionLabel()"
                      ],
                      "text_color": "#ffffff",
                      "background_color": "#123456",
                      "padding": {
                        "left": 20,
                        "top": 20,
                        "right": 20,
                        "bottom": 20
                      },
                      "margin": {
                        "left": 40,
                        "top": 40,
                        "right": 40,
                        "bottom": 40
                      },
                      "on_click": {
                        "type": "JavaScript",
                        "script_list": [
                          "var pos = eigenFragment.getOptionPosition()",
                          "var opt = eigenFragment.getOptionLabel()",
                          "eigenActivity.showToast('Button selected: '+ pos + ': ' + opt)"
                        ]
                      }
                    }
                  ]
                }
              }
            ]
          }
        ]
      }
    }


  ]
}
