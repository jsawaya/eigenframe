{
  "type": "LinearLayout",
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "match_parent",
  "component_list": [
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Termux/sftp home directory:"
    },
    {
      "type": "TextView",
      "id": 991000,
      "layout_width": "match_parent",
      "sftp": "pwd",
      "text_color": "#ffffff",
      "text_size": "20",
      "gravity": "left",
      "background_color": "#000000",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      }
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "git working directory: \n(relative to sftp home directory)"
    },
    {
      "type": "EditText",
      "id": 991001,
      "max_length": 200,
      "is_single_line": true,
      "layout_width": "match_parent",
      "text": "git-repos/eigenframe",
      "text_color": "#ffffff",
      "text_size": "20",
      "gravity": "left",
      "background_color": "#000000",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      }
    },
    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },
    {
      "type": "Button",
      "layout_width": "match_parent",
      "text": "Show git working directory",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "gravity": "center",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title_script": "'directory ' + eigenFragment.concatPaths(991000, 991001)",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "text_size": "14",
                "gravity": "left",
                "text_color": "#ffffff",
                "sftp_script": "'directory ' + eigenFragment.concatPaths(991000, 991001)"
              }
            ]
          }
        ]
      }
    },
    {
      "type": "Button",
      "layout_width": "match_parent",
      "text": "Select directory",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "gravity": "center",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "match_parent",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title_script": "'ListView ' + eigenFragment.concatPaths(991000, 991001)",
        "component_list": [
          {
            "type": "LinearLayout",
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "match_parent",
            "component_list": [
              {
                "type": "Button",
                "layout_width": "match_parent",
                "text": "Parent Directory",
                "text_color": "#ffffff",
                "background_color": "#123456",
                "gravity": "center",
                "margin": {
                  "left": 10,
                  "top": 10,
                  "right": 10,
                  "bottom": 10
                },
                "on_click": {
                  "type": "JavaScript",
                  "script_list": [
                    "eigenFragment.parentPath(991001)",
                    "eigenFragment.closePopupWindow()"
                  ]
                }
              },

              {
                "type": "x-Button",
                "layout_width": "match_parent",
                "text": "Test",
                "text_color": "#ffffff",
                "background_color": "#123456",
                "gravity": "center",
                "margin": {
                  "left": 10,
                  "top": 10,
                  "right": 10,
                  "bottom": 10
                },
                "on_click":
                {
                  "type": "SecureFtp",
                  "id": 110000,
                  "sftp_script": "'list files '+eigenFragment.concatPaths(991000, 991001)",
                  "on_complete":
                  {
                    "type": "ActionList",
                    "component_list": [
                      {
                        "type": "JavaScript",
                        "script_list": [
                          "eigenActivity.showToast('test: '+eigenView)"
                        ]
                      }
                    ]
                  }
                }
              },

              {
                "type": "ListView",
                "id": 111000,
                "layout_width": "match_parent",
                "layout_height": "match_parent",
                "background_color": "#123456",
                "sftp_script": "'list subdir '+eigenFragment.concatPaths(991000, 991001)",
                "on_click":
                {
                  "type": "ActionList",
                  "component_list": [
                    {
                      "type": "JavaScript",
                      "script_list": [
                        "var pos = eigenFragment.getOptionPosition()",
                        "var opt = eigenFragment.getOptionLabel()",
                        "eigenActivity.showToast('ListView row selected: '+ pos + ' - ' + opt)",
                        "eigenFragment.appendPath(991001, opt)",
                        "eigenFragment.closePopupWindow()"
                      ]
                    }

                  ]
                },
                "item_layout": {
                  "type": "LinearLayout",
                  "orientation": "horizontal",
                  "layout_width": "wrap_content",
                  "layout_height": "wrap_content",
                  "gravity": "center_vertical",
                  "component_list": [
                    {
                      "type": "Button",
                      "text_script_list": [
                        "eigenFragment.getOptionPosition() + ': ' + eigenFragment.getOptionLabel()"
                      ],
                      "text_color": "#ffffff",
                      "background_color": "#123456",
                      "margin": {
                        "left": 40,
                        "top": 40,
                        "right": 40,
                        "bottom": 40
                      },
                      "on_click": {
                        "type": "JavaScript",
                        "script_list": [
                          "var pos = eigenFragment.getOptionPosition()",
                          "var opt = eigenFragment.getOptionLabel()",
                          "eigenActivity.showToast('Button selected: '+ pos + ': ' + opt)"
                        ]
                      }
                    }
                  ]
                }
              },

              {
                "type": "x-LinearLayout",
                "orientation": "horizontal",
                "layout_width": "match_parent",
                "layout_height": "match_parent",
                "gravity": "center_vertical",
                "component_list":
                [
                  {
                    "type": "ListView",
                    "id": 111001,
                    "layout_width": "match_parent",
                    "layout_height": "match_parent",
                    "background_color": "#123456",
