{
	"comment": "set the HomeDirectory from sftp pwd",
	"type": "SecureFtp",
	"id": 411000,
	"sftp": "pwd",
	"on_complete": {
		"type": "LinearLayout",
		"scrollable": true,
		"orientation": "vertical",
		"gravity": "center_horizontal",
		"layout_width": "match_parent",
		"component_list": [
			{
				"type": "Clone",
				"name": "HorizontalLine"
			},
			{
				"type": "Clone",
				"name": "TextViewLabel",
				"attributes": {
					"text": "Import Public Key File (OpenPGP)"
				}
			},
			{
				"type": "Clone",
				"name": "TextViewDetail",
				"attributes": {
					"text_list": [
						"Import a recipient's public key file",
						"- this enables you to encrypt files for that recipient",
						"- try importing photopgp-public-key: ",
						"/data/data/com.termux/files/home/git-repos/eigenframe/web/pubkeys/photopgp-public-key.asc"
					]
				}
			},
			{
				"type": "JavaScript",
				"script_list": [
					"eigenFragment.setCacheString('SelectFilePrompt', 0, 'Select Public Key File')",
					"eigenFragment.setCacheString('WorkingDirectory', '')",
					"eigenFragment.setCacheString('SelectedPath', 'git-repos/eigenframe/web/pubkeys')",
					"eigenFragment.setCacheString('SelectedFile', '')",
					"eigenFragment.setIntegerVariable('TargetViewId', 0, 999716)"
				]
			},
			{
				"type": "Clone",
				"name": "JavaScriptSelectFilePath"
			},
			{
				"type": "Clone",
				"name": "ButtonDefault",
				"attributes": {
					"text": "Import Public Key File",
					"icon": {
						"name": "import_export.",
						"location": "top"
					},
					"on_click": {
						"type": "Clone",
						"name": "PopupScreenDefault",
						"attributes": {
							"title": "Import Public Key File",
							"component_list": [
								{
									"type": "Clone",
									"name": "LayoutVerticalScrollable",
									"attributes": {
										"component_list": [
											{
												"type": "Clone",
												"name": "TextViewDetail",
												"attributes": {
													"text_size": "10",
													"comment": [
														"var dir = '/data/data/com.termux/files/home/git-repos/eigenframe/cgi-bin' ",
														"var targetVid = eigenFragment.getIntegerVariable('TargetViewId')",
														"key_path = eigenFragment.getViewState(targetVid)",
														"key_path = '''+eigenFragment.getViewState(targetVid)+''' ",
														"'cd '+dir+'; echo \"gpg_import_public_key('+ key_path +').to_json.to_s\"'",
														"'cd '+dir+'; ruby ssh_ruby.rb \"gpg_import_public_key('+ key_path +').to_json.to_s\"'"
													],
													"ssh_script_list": [
														"var dir = '/data/data/com.termux/files/home/git-repos/eigenframe/cgi-bin' ",
														"var targetVid = eigenFragment.getIntegerVariable('TargetViewId')",
														"'echo ' + targetVid ",
														"'echo ' + eigenFragment.getViewState(targetVid) "
													]
												}
											}
										]
									}
								}
							]
						}
					}
				}
			}
		]
	}
}