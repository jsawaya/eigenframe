{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "HtmlView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "center",
      "x_text_size": "14",
      "text_color": "#ffffff",
      "html_list": [
        "<img src='ic_launcher.'>",
        "<h1><font color=\"#8aec81\">EigenFrame: </font></h1>",
				"<h4><font color=\"#8aec81\">Framework for Dynamic Android Apps</font></h4>",
				"{Specification, Deployment, Rendering & Execution}"
      ]
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },

    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
				"text": "Launch an app from the local file..."
      }
    },

    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
					"Here's where to put your local eigenframe specifications:",
					" - Use the Android shared directory (/storage/emulated/0/Android/data/com.sawaya.eigenframe/files).",
					"The following demonstrates how to launch a local app."
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
				"text": "Launch local app,\npress back-button to exit",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
					"script": "eigenActivity.launch('file:///storage/emulated/0/Android/data/com.sawaya.eigenframe/files/yourapp.json')"
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
				"text": "Launch app from internet/cloud server (GITHUB)"
      }
    },

    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
					"This demonstrates a cloud-based eigenframe app with a gallery of sample layouts, components and actions -- hint: use tabs to select, then click source button"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
				"text": "GITHUB Gallery",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script": "eigenActivity.launch(eigenFragment.getCacheString('RootUrl')+'apps/app1.json')"
        }
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
					"This creates a shortcut on your android screen to launch the Gallery (on GitHub)"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
				"text": "Create shortcut - Gallery",
        "icon": {
          "name": "save.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script_list": [
            "eigenActivity.addShortcut('Gallery', eigenFragment.getCacheString('RootUrl')+'apps/app1.json')",
            "eigenActivity.finish()"
          ]
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
				"text": "Beta Branch on GitHub"
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
					"The Beta Branch of EigenFrame on GITHUB is home to current EigenFrame app development (pre-release)."
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
				"text": "Beta Branch",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script": "eigenActivity.launch('https://raw.githubusercontent.com/jsawaya/eigenframe/beta/web/apps/app_github_beta.json')"
        }
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
				"text": "Create shortcut - Beta",
        "icon": {
          "name": "save.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script_list": [
            "eigenActivity.addShortcut('Beta', 'https://raw.githubusercontent.com/jsawaya/eigenframe/beta/web/apps/app_github_beta.json')",
            "eigenActivity.finish()"
          ]
        }
      }
    }
  ]
}


