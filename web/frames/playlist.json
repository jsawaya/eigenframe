{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "HtmlView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "center",
      "x_text_size": "14",
      "text_color": "#ffffff",
      "html_list": [
        "<img src='ic_launcher.'>",
        "<h1><font color=\"#8aec81\">EigenFrame: </font></h1>",
        "<h3><font color=\"#8aec81\">Framework to Generate Android Apps</font></h3>"
      ]
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Installation:"
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
          "Click [Setup Instructions for Termux] to install termux and setup openssh"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Setup Instructions for Termux",
        "icon": {
          "name": "playlist_check.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "Setup Instructions for Termux",
            "url_script": "eigenFragment.getCacheString('RootUrl')+'frames/ssh-initial-setup.json'"
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
          "Click [GIT Installation] to install git, and download local eigenframe branch"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "GIT Installation",
        "icon": {
          "name": "file_download.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "GIT Installation",
            "url_script": "eigenFragment.getCacheString('RootUrl')+'frames/ssh-git-install.json'"
          }
        }
      }
    },

    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Administration:"
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
          "Click [SecureShell Settings] to connect with Termux (or other remote host)"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "SecureShell Settings",
        "icon": {
          "name": "settings.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "SecureShell Settings",
            "url_script": "eigenFragment.getCacheString('RootUrl')+'frames/ssh-settings.json'"
          }
        }
      }
    },

    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
          "Click [GIT Administration] to update git local working directory"
        ]
      }
    },
		{
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "GIT Administration",
        "icon": {
          "name": "cloud_download.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "GIT Administration",
            "url_script": "eigenFragment.getCacheString('RootUrl')+'frames/git-admin.json'"
          }
        }
      }
    },

    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
          "Click [Edit Remote File] to edit file via sftp"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
				"text": "Edit Remote File (through sftp)",
        "icon": {
          "name": "edit.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
						"title": "Edit Remote File (through sftp)",
            "url_script": "eigenFragment.getCacheString('RootUrl')+'frames/sftp-edit.json'"
          }
        }
      }
    },

    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
          "Click [SecureFtp Gallery] to see more sftp examples"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "SecureFtp Gallery",
        "icon": {
          "name": "import_export.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "SecureFtp Gallery",
            "url_script": "eigenFragment.getCacheString('RootUrl')+'frames/sftp-gallery.json'"
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Launch eigenframe app from the local Android filesystem"
      }
    },

    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
          "This demonstrates how to launch a local custom eigenframe from file:///storage/emulated/0/Android/data/com.sawaya.eigenframe/files/app.json"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "launch this initial application (again),\nthen press back-button to exit",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script": "eigenActivity.launch('file:///storage/emulated/0/Android/data/com.sawaya.eigenframe/files/app.json')"
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Launch eigenframe app from internet/cloud server (GITHUB)"
      }
    },

    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
          "This demonstrates a cloud-based eigenframe and a variety of sample layouts, components and actions -- hint: use tabs to select, then click source button"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "GITHUB Gallery Examples",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script": "eigenActivity.launch(eigenFragment.getCacheString('RootUrl')+'apps/app1.json')"
        }
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
          "This creates a shortcut on your android screen to launch the GITHUB Gallery Examples"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Create shortcut for - GITHUB Gallery Examples",
        "icon": {
          "name": "save.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script_list": [
            "eigenActivity.addShortcut('gallery-app', eigenFragment.getCacheString('RootUrl')+'apps/app1.json')",
            "eigenActivity.finish()"
          ]
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Launch dynamic eigenframe apps from Termux Apache HTTP/CGI"
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Apache Administration",
        "icon": {
          "name": "apache_logo.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "Apache Administration",
            "url_script": "eigenFragment.getCacheString('RootUrl')+'frames/ssh-apache.json'"
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Launch dynamic eigenframe apps from Termux Ruby using SSH or HTTP (webrick)"
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Ruby Administration",
        "icon": {
          "name": "ruby_logo.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "text": "Ruby Administration",
            "url_script": "eigenFragment.getCacheString('RootUrl')+'frames/ssh-ruby.json'"
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Optional: PGP Installation (GnuPG)"
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
          "Click [GnuPG Installation] - only if you plan to use OpenPGP encryption, decryption, signing and verification to your app"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "GnuPG Installation (optional)",
        "icon": {
          "name": "file_download.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "Install gnupg package",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "Clone",
                      "name": "TextViewDetail",
                      "attributes": {
                        "text_size": "10",
                        "ssh_list": [
                          "echo pkg install gnupg",
                          "pkg install gnupg"
                        ]
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
          "Cryptography requires:",
          " - Apache2 (for CGI post method request into Termux)",
          " - Ruby (for eigenframe transforms)",
          " - GnuPG (for OpenPGP Encryption, Decryption, Signing and Verification)"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "OpenPGP Cryptography",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "OpenPGP Cryptography",
            "url_script": "eigenFragment.getCacheString('RootUrl')+'frames/http-cgi-ruby-pgp.json'"
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Optional: Prolog Installation (swi-prolog)"
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
          "Click [Install swi-prolog package] - only if you plan to add an inference engine to your app"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Install swi-prolog package (optional)",
        "icon": {
          "name": "file_download.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "Install swi-prolog package",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "Clone",
                      "name": "TextViewDetail",
                      "attributes": {
                        "text_size": "10",
                        "ssh_list": [
                          "echo pkg install swi-prolog",
                          "pkg install swi-prolog"
                        ]
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Select GitHub Branch:"
      }
    },
    {
      "type": "RadioButton",
      "id": 7500,
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "orientation": "vertical",
      "background_color": "#ff00ff",
      "checked_option": 0,
      "option_list": [
        "master",
        "beta",
        "test"
      ],
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "var github_branch = eigenFragment.getViewState(7500)",
          "eigenActivity.showToast('Selected GitHub Branch: '+github_branch)",
          "eigenFragment.setCacheString('GithubBranch', github_branch)",
          "var root_url = 'https://raw.githubusercontent.com/jsawaya/eigenframe/'+github_branch+'/web/'",
          "eigenFragment.setCacheString('RootUrl', root_url)"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "GitHub EigenFrame Apps",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script": "eigenActivity.launch(eigenFragment.getCacheString('RootUrl')+'apps/app_github.json')"
        }
      }
    }
  ]
}


