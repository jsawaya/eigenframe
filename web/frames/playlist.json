{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "HtmlView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "center",
      "x_text_size": "14",
      "text_color": "#ffffff",
      "html_list": [
        "<img src='ic_launcher.'>",
        "<h1><font color=\"#8aec81\">EigenFrame: </font></h1>",
        "<h4><font color=\"#8aec81\">Framework for Dynamic Android Apps</font></h4>",
        "{Specification, Deployment, Rendering, Execution}"
      ]
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Launch an app from a local file..."
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text": "The following demonstrates how to launch a local app.  Here's where to put your local eigenframe specifications - the shared directory:"
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_size": "10",
        "text": "/storage/emulated/0/Android/data/com.sawaya.eigenframe/files"
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Launch a local app\n(hello world)",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script": "eigenActivity.launch('file:///storage/emulated/0/Android/data/com.sawaya.eigenframe/files/yourapp.json')"
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
				"text": "Launch an app from EigenFrame github server"
      }
    },
		{
			"type": "Clone",
			"name": "SetIsMasterBranchButton"
		},
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
          "Click [Gallery] to see a cloud-based gallery of eigenframe layouts, components and actions;  use tabs to select, or drag left, then click source button to see examples"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Gallery",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
					"script_list": [
						"eigenActivity.launch('https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/apps/app_github_master_gallery.json')",
						"eigenActivity.finish()"
					]
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
				"text": "EigenFrame Github Master Branch"
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
				"text_list": [
					"Click [Launch Github Master Branch] to run EigenFrame apps as Termux services.",
					"Administer SSH/SFTP, GIT, Bash, Ruby, Prolog, PGP, Apache2, ..."
				]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
				"text": "Launch Github Master Branch",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
					"script_list": [
						"eigenFragment.setCacheString('GithubBranch', 'master')",
						"eigenFragment.setViewState(999200, '1')",
						"eigenActivity.launch('https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/apps/app_github_master.json')",
						"eigenActivity.finish()"
					]
        }
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
					"Click [EigenFrame Shortcut] to create a shortcut on your home screen to launch the EigenFrame app from the github master branch"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
				"text": "EigenFrame Shortcut",
        "icon": {
          "name": "save.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script_list": [
						"eigenActivity.addShortcut('EigenFrame', 'https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/apps/app_github_master.json')",
            "eigenActivity.finish()"
          ]
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
				"text": "Beta Branch Features"
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
					"Click [Launch Github Beta Branch] for pre-release features (in development)"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
				"text": "Launch Github Beta Branch",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
					"script_list": [
            "eigenFragment.setCacheString('GithubBranch', 'beta')",
						"eigenFragment.setViewState(999200, '0')",
						"eigenActivity.launch('https://raw.githubusercontent.com/jsawaya/eigenframe/beta/web/apps/app_github_beta.json')",
						"eigenActivity.finish()"
          ]
        }
      }
    },
    {
      "type": "Clone",
			"name": "TextViewDetail",
			"attributes": {
				"text_list": [
					"Click [Beta Shortcut] to create a shortcut on your home screen to launch the EigenFrame app from the github beta branch"
				]
			}
		},
		{
			"type": "Clone",
			"name": "ButtonDefault",
			"attributes": {
				"text": "Beta Shortcut",
				"icon": {
					"name": "save.",
					"location": "top"
				},
				"on_click": {
					"type": "JavaScript",
					"script_list": [
						"eigenActivity.addShortcut('Beta', 'https://raw.githubusercontent.com/jsawaya/eigenframe/beta/web/apps/app_github_beta.json')",
						"eigenActivity.finish()"
					]
				}
			}
		},
		{
			"type": "Clone",
			"name": "HorizontalLine"
    },
    {
      "type": "PopupTextView",
      "condition_script": "!eigenFragment.getCacheString('SecureFtp',411000,'') ",
      "title": "Warning",
      "font": "font/droid-sans-mono/DroidSansMono.ttf",
      "text_list": [
        "Notice - SecureShell (ssh) is not enabled\n",
        "Open Termux, enter:  sshd",
        "Open Install Tab / SecureShell Settings",
        " - Click [Open SSH Home Directory]"
      ]
    }

  ]
}


