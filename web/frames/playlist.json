{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "HtmlView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "x_gravity": "center_horizontal",
      "gravity": "center",
      "x_text_size": "14",
      "text_color": "#ffffff",
      "html_list": [
        "<img src='ic_launcher.png'>",
        "<h1><font color=\"#8aec81\">EigenFrame: Platform for dynamic systems on Android</font></h1>",
        "<h4><i>For more info visit:</i></h4> https://github.com/jsawaya/eigenframe"
      ]
    },
    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Screen Orientation"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Orientation Settings",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "20",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "text": "Screen Orientation Settings",
        "icon": {
          "name": "info.jpg",
          "location": "left"
        },
        "url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/frames/orientation-settings.json"
      }
    },
    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "SecureShell"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "SecureShell Settings",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "20",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "text": "SecureShell Settings",
        "icon": {
          "name": "info.jpg",
          "location": "top"
        },
        "url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/frames/ssh-settings.json"
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "SecureShell Host Administration",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "20",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "text": "SecureShell Host Administration",
        "icon": {
          "name": "info.jpg",
          "location": "top"
        },
        "url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/frames/ssh-admin.json"
      }
    },
    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Launch apps directly from the local Android filesystem"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "launch this initial application (again),\nthen press back-button to exit",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.launch('file:///storage/emulated/0/Android/data/com.sawaya.eigenframe.full/files/app.json')"
        ]
      }
    },
    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Launch apps from internet/cloud server (GITHUB):"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Gallery examples",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.launch('https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/apps/app1.json')"
        ]
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "PhotoPGP demo",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.launch('https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/apps/app0.json')"
        ]
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Create shortcut for - Gallery examples",
      "text_color": "#ffffff",
      "background_color": "#654321",
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.addShortcut('gallery-app', 'https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/apps/app1.json')",
          "eigenActivity.finish()"
        ]
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Create shortcut for - PhotoPGP demo",
      "text_color": "#ffffff",
      "background_color": "#654321",
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.addShortcut('photo-app-demo', 'https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/apps/app0.json')",
          "eigenActivity.finish()"
        ]
      }
    },
    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Launch apps from Apache2 HTTP service (CGI):"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Gallery examples",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.launch('http://localhost:8080/apps/app1_localhost.json')"
        ]
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "show apache2 error log",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupTextView",
        "title": "http://localhost:8080/cgi-bin/sys-list-error-log.sh",
        "url": "http://localhost:8080/cgi-bin/sys-list-error-log.sh"
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "test httpd service response",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupTextView",
        "title": "http://localhost:8080/cgi-bin/sys-directory-listview.rb?dirpath=/data/data/com.termux/files/home",
        "url": "http://localhost:8080/cgi-bin/sys-directory-listview.rb?dirpath=/data/data/com.termux/files/home"
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "File System Explorer\n(Dynamic Application Demo)",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "20",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "text": "EigenFrame",
        "url": "http://localhost:8080/cgi-bin/sys-directory-listview.rb?dirpath=/data/data/com.termux/files/home"
      }
    },
    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Integrate application services (e.g. ruby webrick)"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Start ruby webrick application service",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupTextView",
        "title": "start ruby webrick",
        "font": "font/droid-sans-mono/DroidSansMono.ttf",
        "abort": 2000,
        "ssh": "ruby /data/data/com.termux/files/home/git-repos/eigenframe/cgi-bin/sys-webrick.rb &"
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Test ruby webrick service",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupTextView",
        "title": "http://localhost:1234/test",
        "url": "http://localhost:1234/test"
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Use url to stop ruby process",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupTextView",
        "title": "use url to stop ruby process",
        "url": "http://localhost:1234/exit"
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Use ssh to stop ruby process",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupTextView",
        "title": "use ssh to stop ruby process",
        "font": "font/droid-sans-mono/DroidSansMono.ttf",
        "ssh_list": [
          "pkill ruby",
          "ps -eo cmd"
        ]
      }
    },
    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Launch apps from SecureShell:"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "File System Explorer\n(Dynamic Application Demo)",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "20",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "text": "File system explorer",
        "icon": {
          "name": "info.jpg",
          "location": "left"
        },
        "component_list": [
          {
            "type": "TextView",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "text": "SecureShell calls ruby to generate the following components:",
            "text_size": "20",
            "gravity": "center",
            "text_color": "#ffffff"
          },
          {
            "type": "SecureShell",
            "is_eigen_response": true,
            "ssh_list": [
              "cd /data/data/com.termux/files/home/git-repos/eigenframe/cgi-bin",
              "ruby ssh-directory-listview.rb /data/data/com.termux/files/home"
            ]
          }
        ]
      }
    }
  ]
}


