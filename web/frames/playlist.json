    {
      "type": "ToggleButton",
      "id": 999200,
      "checked_script": " 'master'.equals(eigenFragment.getCacheString('GithubBranch')) ",
      "text_on": "Master Branch Enabled",
      "text_off": "Beta Branch Enabled",
      "text_color": "#ffffff",
      "background_color": "#654321",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "var b1 = eigenFragment.getViewState(999200) == 1",
          "if (b1) eigenFragment.setCacheString('GithubBranch', 'master')",
          "else eigenFragment.setCacheString('GithubBranch', 'beta')",
          "eigenActivity.showToast('GithubBranch: ' + eigenFragment.getCacheString('GithubBranch') )"
        ]
      }
    },
    {
      "type": "Spinner",
      "title": "Select Branch",
      "id": 999100,
      "icon": {
        "name": "share."
      },
      "checked_option": 0,
      "option_list": [
        "master",
        "beta",
        "1.3"
      ],
      "text_color": "#ffffff",
      "background_color": "#654321",
      "gravity": "center",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "selected_option = eigenFragment.getViewState('Spinner:999100')",
          "if (selected_option == '0') eigenFragment.setCacheString('GithubBranch', 'master')",
          "if (selected_option == '1') eigenFragment.setCacheString('GithubBranch', 'beta')",
          "if (selected_option == '2') eigenFragment.setCacheString('GithubBranch', '1.3')",
          "github_branch = eigenFragment.getCacheString('GithubBranch')",
          "eigenActivity.showToast('GithubBranch: ' + github_branch )",
          "var root_url = 'https://raw.githubusercontent.com/jsawaya/eigenframe/'+github_branch+'/web/'",
          "eigenFragment.setCacheString('RootUrl', root_url)",
          "eigenActivity.launch(eigenFragment.getCacheString('RootUrl')+'apps/app_github_master.json')"
        ]
      }
    },
