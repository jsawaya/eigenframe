{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "HtmlView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "center",
      "x_text_size": "14",
      "text_color": "#ffffff",
      "html_list": [
        "<img src='ic_launcher.'>",
        "<h1><font color=\"#8aec81\">EigenFrame: </font></h1>",
				"<h4><font color=\"#8aec81\">Framework for Dynamic Android Apps</font></h4>",
				"{Specification, Deployment, Rendering & Execution}"
      ]
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },

    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Launch an app from a local file..."
      }
    },

    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
				"text": "The following demonstrates how to launch a local app.  Here's where to put your local eigenframe specifications - the shared directory:"
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
				"text_size": "10",
        "text": "/storage/emulated/0/Android/data/com.sawaya.eigenframe/files"
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Launch a local app\n(hello world)",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
					"script": "eigenActivity.launch('file:///storage/emulated/0/Android/data/com.sawaya.eigenframe/files/yourapp.json')"
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Launch an app from internet/cloud server (GITHUB)"
      }
    },

    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
					"Click [Gallery] to see a cloud-based gallery of eigenframe layouts, components and actions;  use tabs to select, or drag left, then click source button to see examples"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Gallery",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script": "eigenActivity.launch(eigenFragment.getCacheString('RootUrl')+'apps/app1.json')"
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
				"text": "Click [Eigenframe Admin] to install and configure services that support EigenFrame."
      }
    },
		{
			"type": "Clone",
			"name": "TextViewDetail",
			"attributes": {
				"text": "It is with these kinds of remote services that EigenFrame applications are developed."
			}
		},
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Eigenframe Admin",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script": "eigenActivity.launch(eigenFragment.getCacheString('RootUrl')+'apps/app_admin.json')"
        }
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
          "Click [Admin Shortcut] to create a shortcut on your home screen to launch the Admin app"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Admin Shortcut",
        "icon": {
          "name": "save.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script_list": [
            "eigenActivity.addShortcut('Admin', eigenFragment.getCacheString('RootUrl')+'apps/app_admin.json')",
            "eigenActivity.finish()"
          ]
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Beta Branch"
      }
    },
    {
      "type": "Clone",
      "name": "TextViewDetail",
      "attributes": {
        "text_list": [
          "Click [Beta Branch] for pre-release EigenFrame apps (in development)"
        ]
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
				"text": "Beta Branch",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script": "eigenActivity.launch('https://raw.githubusercontent.com/jsawaya/eigenframe/beta/web/apps/app_github_beta.json')"
        }
      }
    }
  ]
}


