{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Gallery of sftp examples"
    },
    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "PopupTextView async call to sftp version",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "x-margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupTextView",
        "title": "PopupTextView async call to sftp version",
        "font": "font/droid-sans-mono/DroidSansMono.ttf",
        "sftp": "version"
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "PopupScreen with TextView async call to sftp version",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "text": "PopupScreen with TextView async call to sftp version",
        "icon": {
          "name": "info.jpg",
          "location": "left"
        },
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text_size": "14",
                "gravity": "center",
                "text_color": "#ffffff",
                "sftp": "version"
              }
            ]
          }
        ]
      }
    }
  ]
}


