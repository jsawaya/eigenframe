{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "SSH User-id:"
    },
    {
      "type": "EditText",
      "id": 88800,
      "max_length": 40,
      "filter": "no-whitespace",
      "is_single_line": true,
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text_color": "#ffffff",
      "background_color": "#000000"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "SSH Passphrase:"
    },
    {
      "type": "EditText",
      "id": 88801,
      "is_password": true,
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text_color": "#ffffff",
      "background_color": "#000000",
      "text": "password"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "SSH Host(name/ip):"
    },
    {
      "type": "EditText",
      "id": 88802,
      "max_length": 40,
      "filter": "no-whitespace",
      "is_single_line": true,
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "localhost",
      "text_color": "#ffffff",
      "background_color": "#000000"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "SSH Port:"
    },
    {
      "type": "EditText",
      "id": 88803,
      "max_length": 6,
      "filter": "digits",
      "is_single_line": true,
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "8022",
      "text_color": "#ffffff",
      "background_color": "#000000"
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Test SecureShell Connection"
    },
    {
      "type": "Button",
      "gravity": "center",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "whoami",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "type": "Clone",
        "name": "Margin10"
      },
      "on_click": {
        "type": "PopupTextView",
        "title": "whoami",
        "font": "font/droid-sans-mono/DroidSansMono.ttf",
        "ssh": "whoami"
      }
    },
    {
      "type": "Button",
      "gravity": "center",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "pwd",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupTextView",
        "title": "pwd",
        "font": "font/droid-sans-mono/DroidSansMono.ttf",
        "ssh":  "pwd"
      }
    }

  ]
}


