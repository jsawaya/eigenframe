{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "SSH User-id:"
    },
    {
      "type": "EditText",
      "id": 88800,
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text_color": "#ffffff",
      "background_color": "#000000"
    },
    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "SSH User-id",
      "text_color": "#ffffff",
      "background_color": "#ff00ff",
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.showToast('SSH User-id: '+eigenFragment.getEditTextValue(88800))"
        ]
      }
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "SSH Passphrase:"
    },
    {
      "type": "EditText",
      "id": 88801,
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text_color": "#ffffff",
      "background_color": "#000000"
    },
    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "SSH Passphrase",
      "text_color": "#ffffff",
      "background_color": "#ff00ff",
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.showToast('SSH Passphrase: '+eigenFragment.getEditTextValue(88801))"
        ]
      }
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "SSH Host(name/ip):"
    },
    {
      "type": "EditText",
      "id": 88802,
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "localhost",
      "text_color": "#ffffff",
      "background_color": "#000000"
    },
    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "SSH Host(name/ip)",
      "text_color": "#ffffff",
      "background_color": "#ff00ff",
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.showToast('SSH Host: '+eigenFragment.getEditTextValue(88802))"
        ]
      }
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "SSH Port:"
    },
    {
      "type": "EditText",
      "id": 88803,
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "8022",
      "text_color": "#ffffff",
      "background_color": "#000000"
    },
    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "SSH Port",
      "text_color": "#ffffff",
      "background_color": "#ff00ff",
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.showToast('SSH Port: '+eigenFragment.getEditTextValue(88803))"
        ]
      }
    },
    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Install and configure services using SecureShell"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Test connection",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupTextView",
        "title": "Use ssh to access Termux services and filesystem",
        "font": "font/droid-sans-mono/DroidSansMono.ttf",
        "ssh_list": [
          "echo Termux User-id:",
          "whoami",
          "echo ",
          "echo List of files in Termux home directory:",
          "ls -la"
        ]
      }
    }
  ]
}


