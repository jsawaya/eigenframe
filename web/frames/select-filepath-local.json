{
	"type": "LinearLayout",
	"scrollable": true,
	"orientation": "vertical",
	"gravity": "center_horizontal",
	"layout_width": "match_parent",
	"component_list": [
		{
			"type": "Clone",
			"name": "HorizontalLine"
		},
		{
			"type": "Clone",
			"name": "TextViewLabel",
			"attributes": {
				"text": "Home Directory (sftp):"
			}
		},
		{
			"type": "TextView",
			"x-text": "/storage/emulated/0/Android/data/com.sawaya.eigenframe",
			"text": "/data/data/com.sawaya.eigenframe",			
			"layout_width": "match_parent",
			"text_color": "#ffffff",
			"text_size": "20",
			"gravity": "left",
			"background_color": "#000000"
		},
		{
			"type": "Clone",
			"name": "HorizontalLine"
		},
		{
			"type": "Clone",
			"name": "TextViewLabel",
			"attributes": {
				"text": "Selected Path:"
			}
		},
		{
			"type": "EditText",
			"text_script": "''+eigenFragment.getCacheString('SelectedPathLocal')",
			"max_length": 200,
			"is_single_line": true,
			"layout_width": "match_parent",
			"text_color": "#ffffff",
			"text_size": "20",
			"gravity": "left",
			"background_color": "#000000"
		},
		{
			"type": "LinearLayout",
			"orientation": "vertical",
			"layout_width": "match_parent",
			"component_list": [
				{
					"type": "Clone",
					"name": "HorizontalLine"
				},
				{
					"type": "Clone",
					"name": "TextViewLabel",
					"attributes": {
						"text": "Selected Filename: "
					}
				},
				{
					"type": "EditText",
					"max_length": 200,
					"is_single_line": true,
					"layout_width": "match_parent",
					"text_script": "''+eigenFragment.getCacheString('SelectedFileLocal')",
					"text_color": "#ffffff",
					"text_size": "20",
					"gravity": "left",
					"background_color": "#000000"
				}
			]
		},
		{
			"type": "Clone",
			"name": "HorizontalLine"
		},
		{
			"type": "Clone",
			"name": "TextViewLabel",
			"attributes": {
				"text": "Explore Filesystem: "
			}
		},
		{
			"type": "LinearLayout",
			"orientation": "horizontal",
			"layout_width": "match_parent",
			"gravity": "center_horizontal",
			"component_list": [
				{
					"type": "Button",
					"text": "Explore Filesystem",
					"layout_width": "match_parent",
					"layout_weight": 1,
					"text_color": "#ffffff",
					"background_color": "#123456",
					"icon": {
						"name": "listview.",
						"location": "top"
					},
					"margin": {
						"left": 10,
						"top": 10,
						"right": 10,
						"bottom": 10
					},
					"on_click": {
						"type": "Clone",
						"name": "ListViewPopupScreenAfterSecureFtpDirectoryLocal"
					}
				},
				{
					"type": "Button",
					"text": "Reset",
					"text_color": "#ffffff",
					"background_color": "#123456",
					"gravity": "center",
					"layout_width": "match_parent",
					"layout_weight": 1,
					"icon": {
						"name": "cancel.",
						"location": "top"
					},
					"margin": {
						"left": 10,
						"top": 10,
						"right": 10,
						"bottom": 10
					},
					"on_click": {
						"type": "ActionList",
						"component_list": [
							{
								"type": "JavaScript",
								"script_list": [
									"eigenFragment.setCacheString('SelectedPathLocal', '')",
									"eigenFragment.setCacheString('SelectedFileLocal', '')"
								]
							},
							{
								"type": "Clone",
								"name": "JavaScriptSetFullPathLocal"
							},
							{
								"type": "JavaScript",
								"script": "eigenFragment.closePopupWindow()"
							},
							{
								"type": "Clone",
								"name": "PopupScreenSelectFilePathLocal"
							}
						]
					}
				}
			]
		},
		{
			"type": "Clone",
			"name": "HorizontalLine"
		}
	]
}



