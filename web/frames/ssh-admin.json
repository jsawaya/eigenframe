{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Host Administration"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#ffffff",
      "text_size": "14",
      "text_list": [
        "Prerequisites: You must have sshd running on Termux (or other network host), in order to use ssh."
        ]
    },


    {
      "type": "Button",
      "gravity": "center",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Termux Package Update...",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "icon": {
        "name": "/storage/emulated/0/Android/data/com.sawaya.eigenframe.full/files/icon/white/ic_file_download_white_24dp.png",
        "location": "top"
      },
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "20",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "text": "Termux Package Update...",
        "component_list": [
          {
            "type": "TextView",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "text_size": "20",
            "gravity": "center",
            "text_color": "#ffffff",
            "font": "font/droid-sans-mono/DroidSansMono.ttf",
            "ssh": "echo y | pkg update"
          }
        ]
      }
    },


    {
      "type": "Button",
      "gravity": "center",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Git checkout master, pull, checkout test, merge, status",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "icon": {
        "name": "/storage/emulated/0/Android/data/com.sawaya.eigenframe.full/files/icon/white/ic_cloud_download_white_24dp.png",
        "location": "top"
      },
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "20",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "text": "Git checkout master, pull, checkout test, merge, status",
        "component_list": [
          {
            "type": "TextView",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "text_size": "20",
            "gravity": "center",
            "text_color": "#ffffff",
            "font": "font/droid-sans-mono/DroidSansMono.ttf",
            "ssh_list": [
              "cd ~/git-repos/eigenframe",
              "echo current working directory:",
              "pwd",
              "echo ",
              "echo git status:",
              "git status",
              "echo ",
              "echo git checkout master:",
              "git checkout master",
              "echo ",
              "echo git pull:",
              "git pull",
              "echo ",
              "echo git checkout test:",
              "git checkout test",
              "echo ",
              "echo git merge master:",
              "git merge master",
              "echo ",
              "echo git status:",
              "git status"
            ]
          }
        ]
      }
    }


  ]
}


