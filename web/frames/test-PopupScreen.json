{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Test PopupScreen",
      "text_size": "14",
      "gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
      "text_color": "#ffffff",
      "icon": {
        "name": "ic_launcher_round.",
        "location": "top"
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Test PopupScreen with a component_list(TextView)",
      "text_color": "#ffffff",
      "background_color": "#ff0000",
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title": "PopupScreen with a component_list(TextView)",
        "icon": {
          "name": "info.",
          "location": "left"
        },
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text": "Example of component_list(TextView) on PopupScreen",
                "text_size": "14",
                "gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
                "text_color": "#ffffff"
              },
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text": "text_size:14",
                "text_size": "14",
                "gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
                "text_color": "#ff00ff"
              }
            ]
          }
        ]
      }
    },
    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Test PopupScreen with a url(test-TextView)",
      "text_color": "#ffffff",
      "background_color": "#ff0000",
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title": "PopupScreen",
        "icon": {
          "name": "info.",
          "location": "left"
        },
        "x-url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/frames/test-TextView.json",
        "url_script": "eigenFragment.getCacheString('RootUrl')+'frames/test-TextView.json'"
      }
    },
    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "PopupScreen generates a directory ListView by calling a localhost url...",
      "text_color": "#ffffff",
      "background_color": "#ff0000",
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "20",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title": "EigenFrame",
        "url": "http://localhost:8080/cgi-bin/sys-directory-listview.rb?dirpath=/data/data/com.termux/files/home"
      }
    }

  ]
}
