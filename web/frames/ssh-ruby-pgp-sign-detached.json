{
	"comment": "set the HomeDirectory from sftp pwd",
	"type": "SecureFtp",
	"id": 411000,
	"sftp_script": "'pwd'",
	"on_complete": {
		"type": "LinearLayout",
		"scrollable": true,
		"orientation": "vertical",
		"gravity": "center_horizontal",
		"layout_width": "match_parent",
		"component_list": [
			{
				"type": "Clone",
				"name": "HorizontalLine"
			},
			{
				"type": "Clone",
				"name": "TextViewLabel",
				"attributes": {
					"text": "Create Detached Digital Signature"
				}
			},
			{
				"type": "Clone",
				"name": "TextViewDetail",
				"attributes": {
					"text_list": [
						"After your private key file has been imported, you can create a detached digital signature for any particular file to ensure it's authenticity and that it has not been modified since it was signed"
					]
				}
			},
			{
				"type": "JavaScript",
				"script": "eigenFragment.setCacheString('SelectFilePrompt', 0, 'Select File to be Signed')"
			},
			{
				"type": "JavaScript",
				"script_list": [
					"eigenFragment.setCacheString('WorkingDirectory', 'git-repos/eigenframe')",
					"eigenFragment.setCacheString('SelectedPath', '')",
					"eigenFragment.setCacheString('SelectedFile', '')"
				]
			},
			{
				"type": "Clone",
				"name": "JavaScriptSelectFilePath"
			},
			{
				"type": "Clone",
				"name": "TextViewLabel",
				"attributes": {
					"text": "Private KeyId:"
				}
			},
			{
				"type": "Clone",
				"name": "TextViewDetail",
				"attributes": {
					"text_list": [
						"Try the demo-private-key KeyId: 5C91FC661620EAFA",
						"demo-private-key passphrase: demo"
					]
				}
			},
			{
				"type": "EditText",
				"id": 6607,
				"is_single_line": true,
				"layout_width": "match_parent",
				"layout_height": "wrap_content",
				"text_color": "#ffffff",
				"background_color": "#000000",
				"text": "5C91FC661620EAFA"
			},
			{
				"type": "Clone",
				"name": "EditTextPgpPassword6606"
			},
			{
				"type": "Button",
				"text": "Create Detached Digital Signature",
				"layout_width": "wrap_content",
				"layout_height": "wrap_content",
				"text_color": "#ffffff",
				"background_color": "#654321",
				"icon": {
					"name": "info.",
					"location": "top"
				},
				"on_click": {
					"type": "UrlRequest",
					"id": 6605,
					"is_eigen_response": false,
					"url": "http://localhost:8080/cgi-bin/cgi_ruby.rb",
					"parameter_list": [
						{
							"name": "keyfile",
							"value_script_list": [
								"var targetVid = eigenFragment.getIntegerVariable('TargetViewId')",
								"var keyfile = eigenFragment.getViewState(targetVid)",
								"'' + keyfile"
							]
						},
						{
							"name": "keyid",
							"value_script_list": [
								"'' + eigenFragment.getViewState(6607)"
							]
						},
						{
							"name": "password",
							"value_script_list": [
								"'' + eigenFragment.getViewState(6606)"
							]
						},
						{
							"name": "ruby",
							"value_list": [
								"keyid = cgi.params['keyid'][0]",
								"password = cgi.params['password'][0]",
								"keyfile = cgi.params['keyfile'][0]",
								"gpg_sign_detached(keyid, password, keyfile).to_json.to_s"
							]
						}
					],
					"on_complete": {
						"type": "Clone",
						"name": "PopupScreenDefault",
						"attributes": {
							"title": "Create Detached Digital Signature",
							"component_list": [
								{
									"type": "Clone",
									"name": "LayoutVerticalScrollable",
									"attributes": {
										"component_list": [
											{
												"type": "Clone",
												"name": "TextViewDetail",
												"attributes": {
													"url": "file:///data/user/0/com.sawaya.eigenframe/files/UrlRequest:6605"
												}
											}
										]
									}
								}
							]
						}
					}
				}
			}
		]
	}
}
