{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Apache2 Administration"
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Install apache2 package",
        "icon": {
          "name": "file_download.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "Install apache2 package",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "Clone",
                      "name": "TextViewDetail",
                      "attributes": {
                        "text_size": "10",
                        "ssh_list": [
                          "echo pkg install apache2",
                          "pkg install apache2"
                        ]
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Import eigenframe apache2 configuration, and cgi scripts",
        "icon": {
          "name": "settings.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "Import eigenframe apache2 configuration, and cgi scripts",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "Clone",
                      "name": "TextViewDetail",
                      "attributes": {
                        "text_size": "10",
                        "ssh_list": [
                          "echo ",
                          "cd ~/../usr/etc/apache2/",
                          "cp -f --backup=numbered httpd.conf httpd.conf",
                          "echo ",
                          "echo install apache2 configuration from eigenframe/etc-apache2/httpd.conf",
                          "cp ~/git-repos/eigenframe/etc-apache2/httpd.conf .",
                          "echo ",
                          "echo enable execution of cgi-bin directory files",
                          "cd ~/git-repos/eigenframe/cgi-bin",
                          "chmod 755 *.sh",
                          "chmod 755 *.rb"
                        ]
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Start Apache2 HTTP/CGI Services",
        "icon": {
          "name": "settings.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "Start Apache2 HTTP/CGI Services",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "Clone",
                      "name": "TextViewDetail",
                      "attributes": {
                        "text_size": "10",
                        "ssh_list": [
                          "echo Starting Apache2 HTTP/CGI Services ...",
                          "httpd",
                          "sleep 1",
                          "echo ps -e",
                          "ps -e",
                          "echo ready to test - click [Test Apache2 CGI Service]"
                        ]
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },



    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Test apache2 cgi web-server",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 4,
        "top": 4,
        "right": 4,
        "bottom": 4
      },
      "icon": {
        "name": "info.",
        "location": "left"
      },
      "on_click": {
        "type": "PopupTextView",
        "title": "Test Apache2 CGI Service",
        "url": "http://localhost:8080/cgi-bin/sys-test.sh"
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Show Apache2 Error Log (using SSH)",
        "on_click": {
          "type": "PopupTextView",
          "title": "Show Apache2 Error Log",
          "font": "font/droid-sans-mono/DroidSansMono.ttf",
          "ssh": "tail -n 30 ~/../usr/var/log/apache2/error_log"
        }
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Show Apache2 Error Log (using CGI)",
        "on_click": {
          "type": "PopupTextView",
          "title": "Show Apache2 Error Log",
          "font": "font/droid-sans-mono/DroidSansMono.ttf",
          "url": "http://localhost:8080/cgi-bin/sys-list-error-log.sh"
        }
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Stop Apache2 HTTP/CGI processes",
        "on_click": {
          "type": "PopupTextView",
          "title": "Stop Apache2 HTTP/CGI processes",
          "font": "font/droid-sans-mono/DroidSansMono.ttf",
          "ssh_list": [
            "killall httpd",
            "ps -eo cmd"
          ]
        }
      }
    },

    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Launch apps from Apache2 HTTP/CGI service:"
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Launch HTTP Gallery Example",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script_list": [
            "eigenActivity.launch('http://localhost:8080/apps/app1_localhost.json')"
          ]
        }
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "File System Explorer\n(Uses Ruby Scripts in CGI)",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "PopupTextView",
          "title": "File System Explorer\n(Dynamic Application Demo)",
          "url": "http://localhost:8080/cgi-bin/sys-directory-listview.rb?dirpath=/data/data/com.termux/files/home"
        }
      }
    }

  ]
}


