{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Apache2 Installation"
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Install apache2 package",
        "icon": {
          "name": "file_download.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "Install apache2 package",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "Clone",
                      "name": "TextViewDetail",
                      "attributes": {
                        "text_size": "10",
                        "ssh_list": [
                          "echo pkg install apache2",
                          "pkg install apache2"
                        ]
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Import eigenframe apache2 configuration, and cgi scripts",
        "icon": {
          "name": "settings.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "Import eigenframe apache2 configuration, and cgi scripts",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "Clone",
                      "name": "TextViewDetail",
                      "attributes": {
                        "text_size": "10",
                        "ssh_list": [
                          "echo ",
                          "cd ~/../usr/etc/apache2/",
                          "cp -f --backup=numbered httpd.conf httpd.conf",
                          "echo ",
                          "echo install apache2 configuration from eigenframe/etc-apache2/httpd.conf",
                          "cp ~/git-repos/eigenframe/etc-apache2/httpd.conf .",
                          "echo ",
                          "echo enable execution of cgi-bin directory files",
                          "cd ~/git-repos/eigenframe/cgi-bin",
                          "chmod 755 *.sh",
                          "chmod 755 *.rb"
                        ]
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Apache2 Administration - Start/Stop"
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Check if Apache2 HTTP processes are running",
        "icon": {
          "name": "info.",
          "location": "top"
        },
        "on_click": {
          "type": "PopupTextView",
          "title": "Check if Apache2 HTTP processes are running",
          "font": "font/droid-sans-mono/DroidSansMono.ttf",
          "ssh_list": [
            "ps -eo cmd"
          ]
        }
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Start Apache2 HTTP/CGI Services",
        "icon": {
          "name": "open_with.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "Start Apache2 HTTP/CGI Services",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "Clone",
                      "name": "TextViewDetail",
                      "attributes": {
                        "text_size": "10",
                        "ssh_list": [
                          "echo Starting Apache2 HTTP/CGI Services ...",
                          "httpd",
                          "sleep 1",
                          "echo ps -e",
                          "ps -e",
                          "echo ready to test - click [Test Apache2 CGI Service]"
                        ]
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Stop Apache2 HTTP/CGI Services",
        "icon": {
          "name": "close.",
          "location": "top"
        },
        "on_click": {
          "type": "PopupTextView",
          "title": "Stop Apache2 HTTP/CGI Services",
          "font": "font/droid-sans-mono/DroidSansMono.ttf",
          "ssh_list": [
            "killall httpd",
            "echo Stopped Apache2 services"
          ]
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Apache2 Testing"
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Test Apache2 Web Root",
        "icon": {
          "name": "info.",
          "location": "top"
        },
        "on_click": {
          "type": "WebView",
          "layout_width": "match_parent",
          "url": "http://localhost:8080/"
        }
      }
    },


    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Test Apache2 CGI Service",
        "icon": {
          "name": "info.",
          "location": "top"
        },
        "on_click": {
          "type": "PopupTextView",
          "font": "font/droid-sans-mono/DroidSansMono.ttf",
          "title": "Test Apache2 CGI Service",
          "url": "http://localhost:8080/cgi-bin/sys-test.sh"
        }
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Show Apache2 Error Log (using SSH)",
        "on_click": {
          "type": "PopupTextView",
          "title": "Show Apache2 Error Log (using SSH)",
          "font": "font/droid-sans-mono/DroidSansMono.ttf",
          "ssh": "tail -n 30 ~/../usr/var/log/apache2/error_log"
        }
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Show Apache2 Error Log (using CGI)",
        "on_click": {
          "type": "PopupTextView",
          "title": "Show Apache2 Error Log (using CGI)",
          "font": "font/droid-sans-mono/DroidSansMono.ttf",
          "url": "http://localhost:8080/cgi-bin/sys-list-error-log.sh"
        }
      }
    },

    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Launch apps from Apache2 HTTP/CGI service:"
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Launch Gallery Example (from http localhost:8080)",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "JavaScript",
          "script_list": [
            "eigenActivity.launch('http://localhost:8080/apps/app1_localhost.json')"
          ]
        }
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Test File System Explorer\n(shows json specs)",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "PopupTextView",
          "title": "File System Explorer\n(show json specs)",
          "url": "http://localhost:8080/cgi-bin/sys-directory-listview.rb?dirpath=/data/data/com.termux/files/home"
        }
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "Launch File System Explorer\n(CGI calls Ruby)",
        "icon": {
          "name": "open_browser.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "Launch File System Explorer\n(CGI calls Ruby)",
            "url": "http://localhost:8080/cgi-bin/sys-directory-listview.rb?dirpath=/data/data/com.termux/files/home"
          }
        }
      }
    }


  ]
}


