{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "text": "Test PopupHtmlView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text_size": "14",
      "text_color": "#ffffff"
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "PopupHtmlView with html_list",
      "text_color": "#ffffff",
      "background_color": "#11ff0000",
      "icon": {
        "name": "info.",
        "location": "left"
      },
      "on_click": {
        "type": "PopupHtmlView",
        "title": "PopupHtmlView/html_list",
        "html_list": [
          "9/27/2019 Version 0.1<hr/>",
          "- Popup dynamic html with access to application-embedded icons [<img src='info.jpg'>]"
        ]
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "PopupHtmlView with url request: About",
      "text_color": "#ffffff",
      "background_color": "#000000",
      "margin": {
        "left": 4,
        "top": 4,
        "right": 4,
        "bottom": 4
      },
      "icon": {
        "name": "info.",
        "location": "left"
      },
      "on_click": {
        "type": "PopupHtmlView",
        "title": "PopupHtmlView",
        "url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/html/about.html"
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "PopupHtmlView with url request: Recent Changes",
      "text_color": "#ffffff",
      "background_color": "#000000",
      "icon": {
        "name": "info.",
        "location": "left"
      },
      "on_click": {
        "type": "PopupHtmlView",
        "title": "PopupHtmlView",
        "url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/html/recent-changes.html"
      },
      "padding": {
        "left": 4,
        "top": 4,
        "right": 4,
        "bottom": 4
      },
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      }
    }
  ]
}
