{
  "type": "LinearLayout",
  "layout-width": "match_parent",
  "layout-height": "wrap_content",
  "component-list": [
    {
      "type": "TextView",
      "layout-width": "match_parent",
      "layout-height": "wrap_content",
      "text": "Test EigenScreen",
      "text-size": "20",
      "gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
      "text-color": "#ffffff",
      "icon": {
        "name": "sawaya_eigenframe_icon.png",
        "location": "top"
      }
    },
    {
      "type": "HorizontalLine",
      "size": 2,
      "color": "#00ff00"
    },
    {
      "type": "Button",
      "layout-width": "match_parent",
      "layout-height": "wrap_content",
      "text": "Test EigenScreen with a component-list(TextView)",
      "text-color": "#ffffff",
      "background-color": "#ff0000",
      "on-click": {
        "type": "EigenScreen",
        "layout-width": "match_parent",
        "layout-height": "wrap_content",
        "text-size": "20",
        "text-color": "#ffffff",
        "background-color": "#111111",
        "text": "EigenScreen1",
        "icon": {
          "name": "info.jpg",
          "location": "left"
        },
        "component-list": [
          {
            "type": "TextView",
            "layout-width": "match_parent",
            "layout-height": "wrap_content",
            "text": "Example of component-list(TextView) on EigenScreen",
            "text-size": "20",
            "gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
            "text-color": "#ffffff"
          },
          {
            "type": "TextView",
            "layout-width": "match_parent",
            "layout-height": "wrap_content",
            "text": "text-size:14",
            "text-size": "14",
            "gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
            "text-color": "#ff00ff"
          }
        ]
      }
    },
    {
      "type": "Button",
      "layout-width": "match_parent",
      "layout-height": "wrap_content",
      "text": "Test EigenScreen with a url(test-TextView)",
      "text-color": "#ffffff",
      "background-color": "#ff0000",
      "on-click": {
        "type": "EigenScreen",
        "layout-width": "match_parent",
        "layout-height": "wrap_content",
        "text-size": "20",
        "text-color": "#ffffff",
        "background-color": "#111111",
        "text": "EigenScreen1",
        "icon": {
          "name": "info.jpg",
          "location": "left"
        },
        "url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/frames/test-TextView.json"
      }
    },
    {
      "type": "Button",
      "layout-width": "match_parent",
      "layout-height": "wrap_content",
      "text": "EigenScreen2 calls localhost url to generate directory ListView",
      "text-color": "#ffffff",
      "background-color": "#ff0000",
      "on-click": {
        "type": "EigenScreen",
        "layout-width": "match_parent",
        "layout-height": "wrap_content",
        "text-size": "20",
        "text-color": "#ffffff",
        "background-color": "#111111",
        "text": "EigenScreen2",
        "icon": {
          "name": "info.jpg",
          "location": "left"
        },
        "url": "http://localhost:8080/cgi-bin/sys-directory-listview.rb?keyfile=/data/data/com.termux/files/home"
      }
    },
    {
      "type": "Button",
      "layout-width": "match_parent",
      "layout-height": "wrap_content",
      "text": "Directory ListView - home/storage",
      "text-color": "#ffffff",
      "background-color": "#ff0000",
      "on-click": {
        "type": "EigenScreen",
        "layout-width": "match_parent",
        "layout-height": "wrap_content",
        "text-size": "20",
        "text-color": "#ffffff",
        "background-color": "#111111",
        "text": "EigenScreen3",
        "url": "http://localhost:8080/cgi-bin/sys-directory-listview.rb?keyfile=/data/data/com.termux/files/home/storage"
      }
    }

  ]
}
