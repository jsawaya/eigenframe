{
  "type": "LinearLayout",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Test EigenScreen",
      "text_size": "20",
      "gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
      "text_color": "#ffffff",
      "icon": {
        "name": "sawaya_eigenframe_icon.png",
        "location": "top"
      }
    },
    {
      "type": "HorizontalLine",
      "size": 2,
      "color": "#00ff00"
    },
    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Test EigenScreen with a component_list(TextView)",
      "text_color": "#ffffff",
      "background_color": "#ff0000",
      "on_click": {
        "type": "EigenScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "20",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "text": "EigenScreen1",
        "icon": {
          "name": "info.jpg",
          "location": "left"
        },
        "component_list": [
          {
            "type": "TextView",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "text": "Example of component_list(TextView) on EigenScreen",
            "text_size": "20",
            "gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
            "text_color": "#ffffff"
          },
          {
            "type": "TextView",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "text": "text_size:14",
            "text_size": "14",
            "gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
            "text_color": "#ff00ff"
          }
        ]
      }
    },
    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Test EigenScreen with a url(test-TextView)",
      "text_color": "#ffffff",
      "background_color": "#ff0000",
      "on_click": {
        "type": "EigenScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "20",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "text": "EigenScreen1",
        "icon": {
          "name": "info.jpg",
          "location": "left"
        },
        "url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/frames/test-TextView.json"
      }
    },
    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "EigenScreen generates a directory ListView by calling a localhost url...",
      "text_color": "#ffffff",
      "background_color": "#ff0000",
      "on_click": {
        "type": "EigenScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "20",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "text": "EigenFrame",
        "url": "http://localhost:8080/cgi-bin/sys-directory-listview.rb?dirpath=/data/data/com.termux/files/home"
      }
    }

  ]
}
