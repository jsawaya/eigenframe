{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "layout-width": "match_parent",
  "layout-height": "wrap_content",
  "component-list": [
    {
      "type": "TextView",
      "layout-width": "MATCH_PARENT",
      "layout-height": "wrap_content",
      "text": "Test EigenScreen",
      "text-size": "20",
      "gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
      "text-color": "#ffffff",
      "icon": {
        "name": "sawaya_eigenframe_icon.png",
        "location": "top"
      }
    },
    {
      "type": "Button",
      "layout-width": "match_parent",
      "layout-height": "wrap_content",
      "text": "Source",
      "text-color": "#ffffff",
      "background-color": "#22ff0000",
      "icon": {
        "name": "info.jpg",
        "location": "left"
      },
      "eigen-script": {
        "type": "PopupTextView",
        "title": "Source",
        "url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/frames/test-EigenScreen.json"
      }
    },
    {
      "type": "HorizontalLine",
      "size": 2,
      "color": "#00ff00"
    },
    {
      "type": "Button",
      "layout-width": "match_parent",
      "layout-height": "wrap_content",
      "text": "Test EigenScreen with a component-list(TextView) and url(test-TextView)",
      "text-color": "#ffffff",
      "background-color": "#ff0000",
      "eigen-script": {
        "type": "EigenScreen",
        "layout-width": "match_parent",
        "layout-height": "wrap_content",
        "text-size": "20",
        "text-color": "#ffffff",
        "background-color": "#111111",
        "text": "EigenScreen",
        "icon": {
          "name": "info.jpg",
          "location": "left"
        },
        "url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/frames/test-TextView.json",
        "component-list": [
          {
            "type": "TextView",
            "layout-width": "MATCH_PARENT",
            "layout-height": "wrap_content",
            "text": "Example of component-list(TextView) on EigenScreen",
            "text-size": "20",
            "gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
            "text-color": "#ffffff",
            "icon": {
              "name": "sawaya_eigenframe_icon.png",
              "location": "top"
            }
          }
        ]
      }
    },
    {
      "type": "Button",
      "layout-width": "match_parent",
      "layout-height": "wrap_content",
      "text": "Test EigenScreen with a localhost url that generates directory ListView",
      "text-color": "#ffffff",
      "background-color": "#ff0000",
      "eigen-script": {
        "type": "EigenScreen",
        "layout-width": "match_parent",
        "layout-height": "wrap_content",
        "text-size": "20",
        "text-color": "#ffffff",
        "background-color": "#111111",
        "text": "EigenScreen",
        "icon": {
          "name": "info.jpg",
          "location": "left"
        },
        "url": "http://localhost:8080/cgi-bin/sys-directory-listview.rb?keyfile=/data/data/com.termux/files/home"
      }
    },
    {
      "type": "Button",
      "layout-width": "match_parent",
      "layout-height": "wrap_content",
      "text": "Directory ListView - home/storage",
      "text-color": "#ffffff",
      "background-color": "#ff0000",
      "eigen-script": {
        "type": "EigenScreen",
        "layout-width": "match_parent",
        "layout-height": "wrap_content",
        "text-size": "20",
        "text-color": "#ffffff",
        "background-color": "#111111",
        "text": "EigenScreen",
        "url": "http://localhost:8080/cgi-bin/sys-directory-listview.rb?keyfile=/data/data/com.termux/files/home/storage"
      }
    }

  ]
}
