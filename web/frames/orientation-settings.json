{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Screen Orientation Settings:",
      "gravity": "left"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Automatic orientation based on sensors",
      "gravity": "center",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "icon": {
        "name": "rotate_90.",
        "location": "top"
      },
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.enableOrientationEventListener(true)"
        ]
      }
    },
    {
      "type": "Button",
      "gravity": "center",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Portrait Orientation",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "icon": {
        "name": "arrow_up.",
        "location": "top"
      },
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.enableOrientationEventListener(false)",
          "eigenActivity.setRequestedOrientation(android.content.pm.ActivityInfo.SCREEN_ORIENTATION_PORTRAIT)"
        ]
      }
    },
    {
      "type": "Button",
      "gravity": "center",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Landscape Orientation",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "icon": {
        "name": "arrow_forward.",
        "location": "top"
      },
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.enableOrientationEventListener(false)",
          "eigenActivity.setRequestedOrientation(android.content.pm.ActivityInfo.SCREEN_ORIENTATION_LANDSCAPE)"
        ]
      }
    },
    {
      "type": "Button",
      "gravity": "center",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Reverse-Portrait Orientation",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "icon": {
        "name": "arrow_down.",
        "location": "top"
      },
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.enableOrientationEventListener(false)",
          "eigenActivity.setRequestedOrientation(android.content.pm.ActivityInfo.SCREEN_ORIENTATION_REVERSE_PORTRAIT)"
        ]
      }
    },
    {
      "type": "Button",
      "gravity": "center",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Reverse-Landscape Orientation",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "icon": {
        "name": "arrow_back.",
        "location": "top"
      },
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.enableOrientationEventListener(false)",
          "eigenActivity.setRequestedOrientation(android.content.pm.ActivityInfo.SCREEN_ORIENTATION_REVERSE_LANDSCAPE)"
        ]
      }
    }
  ]
}


