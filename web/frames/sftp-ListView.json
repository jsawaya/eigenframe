{
  "type": "LinearLayout",
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "match_parent",
  "component_list": [
    {
      "type": "Button",
      "layout_width": "match_parent",
      "text": "Parent Directory",
      "text_color": "#ffffff",
      "background_color": "#654321",
      "gravity": "center",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenFragment.parentPath(991001)",
          "eigenFragment.closePopupWindow()"
        ]
      }
    },

    {
      "type": "ListView",
      "id": 111000,
      "layout_width": "match_parent",
      "layout_height": "match_parent",
      "background_color": "#123456",
      "sftp_script": "'list subdir '+eigenFragment.concatPaths(991000, 991001)",
      "on_click":
      {
        "type": "ActionList",
        "component_list": [
          {
            "type": "JavaScript",
            "script_list": [
              "var pos = eigenFragment.getOptionPosition()",
              "var opt = eigenFragment.getOptionLabel()",
              "eigenActivity.showToast('ListView row selected: '+ pos + ' - ' + opt)",
              "eigenFragment.appendPath(991001, opt)",
              "eigenFragment.closePopupWindow()"
            ]
          }

        ]
      },
      "item_layout": {
        "type": "LinearLayout",
        "orientation": "horizontal",
        "layout_width": "wrap_content",
        "layout_height": "wrap_content",
        "gravity": "center_vertical",
        "component_list": [
          {
            "type": "TextView",
            "text_script": "eigenFragment.getOptionPosition() + ': ' + eigenFragment.getOptionLabel()",
            "text_color": "#ffffff",
            "background_color": "#123456",
            "margin": {
              "left": 40,
              "top": 40,
              "right": 40,
              "bottom": 40
            },
            "on_click":
            {
              "type": "ActionList",
              "component_list": [
                {
                  "type": "JavaScript",
                  "script_list": [
                    "var pos = eigenFragment.getOptionPosition()",
                    "var opt = eigenFragment.getOptionLabel()",
                    "eigenActivity.showToast('ListView row selected: '+ pos + ' - ' + opt)",
                    "eigenFragment.appendPath(991001, opt)",
                    "eigenFragment.closePopupWindow()"
                  ]
                }
              ]
            }
          }
        ]
      }
    }


  ]
}
