{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "text": "Examples of PopupTextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text_size": "20",
      "text_color": "#ffffff"
    },
    {
      "type": "HorizontalLine",
      "size": 1,
      "color": "#00ff00"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Popup TextView for a single line of text",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "on_click": {
        "type": "PopupTextView",
        "title": "Popup TextView for a single line of text",
        "text": "this is a test"
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Popup TextView for a text_list",
      "text_color": "#ffffff",
      "background_color": "#22ffff00",
      "on_click": {
        "type": "PopupTextView",
        "title": "Popup TextView for a text_list",
        "text_list": [
          "this is line 1",
          "this is line 2",
          "this is line 3"
        ]
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Popup TextView for the contents of a url request (from github)",
      "text_color": "#ffffff",
      "background_color": "#22ff0000",
      "on_click": {
        "type": "PopupTextView",
        "title": "Popup TextView for the contents of a url request (from github)",
        "url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/html/about.html"
      }
    },
    {
      "type": "TextView",
      "text": "Examples of PopupTextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text_size": "20",
      "text_color": "#ffffff"
    },
    {
      "type": "HorizontalLine",
      "size": 1,
      "color": "#00ff00"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "font/gnu-free-font/FreeMono.ttf",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "on_click": {
        "type": "PopupTextView",
        "title": "font/gnu-free-font/FreeMono.ttf",
        "font": "font/gnu-free-font/FreeMono.ttf",
        "ssh_list": [
          "ps -e",
          "ls -la"
        ]
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "font/droid-sans-mono/DroidSansMono.ttf",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "on_click": {
        "type": "PopupTextView",
        "title": "font/droid-sans-mono/DroidSansMono.ttf",
        "font": "font/droid-sans-mono/DroidSansMono.ttf",
        "ssh_list": [
          "ps -e",
          "ls -la"
        ]
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "font/liberation-mono/LiberationMono-Regular.ttf",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "on_click": {
        "type": "PopupTextView",
        "title": "font/liberation-mono/LiberationMono-Regular.ttf",
        "font": "font/liberation-mono/LiberationMono-Regular.ttf",
        "ssh_list": [
          "ps -e",
          "ls -la"
        ]
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "font/space-mono/SpaceMono-Regular.ttf",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "on_click": {
        "type": "PopupTextView",
        "title": "font/space-mono/SpaceMono-Regular.ttf",
        "font": "font/space-mono/SpaceMono-Regular.ttf",
        "ssh_list": [
          "ps -e",
          "ls -la"
        ]
      }
    }

  ]
}
