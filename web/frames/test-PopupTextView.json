{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "text": "Examples of PopupTextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text_size": "14",
      "text_color": "#ffffff"
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Popup TextView for a single line of text",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "on_click": {
        "type": "PopupTextView",
        "title": "Popup TextView for a single line of text",
        "text": "this is a test"
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Popup TextView for a text_list",
      "text_color": "#ffffff",
      "background_color": "#22ffff00",
      "on_click": {
        "type": "PopupTextView",
        "title": "Popup TextView for a text_list",
        "text_list": [
          "this is line 1",
          "this is line 2",
          "this is line 3"
        ]
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Popup TextView for the contents of a url request (from github)",
      "text_color": "#ffffff",
      "background_color": "#22ff0000",
      "on_click": {
        "type": "PopupTextView",
        "title": "Popup TextView for the contents of a url request (from github)",
				"url_script": "eigenFragment.getCacheString('RootUrl')+'frames/test-PopupTextView.json'"
      }
    }
  ]
}
