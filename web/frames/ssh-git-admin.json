{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "component_list": [

    {
      "type": "Clone",
      "name": "HorizontalLine"
    },

    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Termux/sftp home directory:"
      }
    },

    {
      "type": "TextView",
      "id": 991000,
      "sftp": "pwd",
      "layout_width": "match_parent",
      "text_color": "#ffffff",
      "text_size": "20",
      "gravity": "left",
      "background_color": "#000000",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      }
    },

    {
      "type": "Clone",
      "name": "HorizontalLine"
    },

    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Home git working directory: \n(relative to sftp home directory)"
      }
    },

    {
      "type": "EditText",
      "id": 991001,
      "text": "git-repos/eigenframe",
      "max_length": 200,
      "is_single_line": true,
      "layout_width": "match_parent",
      "text_color": "#ffffff",
      "text_size": "20",
      "gravity": "left",
      "background_color": "#000000",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      }
    },
    {
      "type": "ToggleButton",
      "id": 991005,
      "text_on": "reset",
      "text_off": "clear",
      "checked": false,
      "text_color": "#ffffff",
      "background_color": "#654321",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.showToast('ToggleButton getViewState: '+eigenFragment.getViewState(991005))"
        ],
        "x-script_list": [
          "eigenActivity.showToast('ToggleButton getViewState: '+eigenFragment.getViewState(991005))",
          "if (eigenView.isChecked()) eigenView.setChecked(false)",
          "else eigenView.setChecked(true)"
        ]
      }
    },

    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "Specific Path (within the git repository)"
      }
    },
    {
      "type": "EditText",
      "id": 991002,
      "text": "",
      "max_length": 200,
      "is_single_line": true,
      "layout_width": "match_parent",
      "text_color": "#ffffff",
      "text_size": "20",
      "gravity": "left",
      "background_color": "#000000",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      }
    },

    {
      "type": "Button",
      "text": "Explore Remote Directory (ListView)",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text_color": "#ffffff",
      "background_color": "#654321",
      "icon": {
        "name": "listview.",
        "location": "top"
      },
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click":
      {
        "type": "SecureFtp",
        "id": 991004,
        "sftp_script": "'directory ' + eigenFragment.concatPaths(991000, 991001, 991002)",
        "on_complete":
        {
          "type": "PopupScreen",
          "title_script": "''+ eigenFragment.concatPaths(991000, 991001, 991002)",
          "url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/frames/ssh-git-admin-listview.json",
          "layout_width": "match_parent",
          "text_size": "14",
          "text_color": "#ffffff",
          "background_color": "#111111"
        }
      }
    },

    {
      "type": "Clone",
      "name": "HorizontalLine"
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "pull github master, merge to test branch in git-repos/eigenframe",
        "icon": {
          "name": "cloud_download.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "pull github master, merge to test branch in git-repos/eigenframe",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "Clone",
                      "name": "TextViewDetail",
                      "attributes": {
                        "text_size": "10",
                        "ssh_list": [
                          "cd ~/git-repos/eigenframe",
                          "echo current working directory:",
                          "pwd",
                          "echo ",
                          "echo git status:",
                          "git status",
                          "echo ",
                          "echo git checkout master:",
                          "git checkout master",
                          "echo ",
                          "echo git pull:",
                          "git pull",
                          "echo ",
                          "echo git checkout test:",
                          "git checkout test",
                          "echo ",
                          "echo git merge master:",
                          "git merge master",
                          "echo ",
                          "echo git status:",
                          "git status"
                        ]
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },

    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "git status",
        "icon": {
          "name": "info.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "git status",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "Clone",
                      "name": "TextViewDetail",
                      "attributes": {
                        "text_size": "10",
                        "ssh_script": "'cd ' + eigenFragment.getViewState(991001) + '; git status'"
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "git add *",
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "git add *",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "Clone",
                      "name": "TextViewDetail",
                      "attributes": {
                        "text_size": "10",
                        "ssh_script": "'cd ' + eigenFragment.getViewState(991001) + '; git add *'"
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "git commit -a m 'testing'",
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "git commit -a m 'testing'",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "Clone",
                      "name": "TextViewDetail",
                      "attributes": {
                        "text_size": "10",
                        "ssh_script": "'cd ' + eigenFragment.getViewState(991001) + '; git commit -a -m \"testing\"'"
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "git push origin test",
        "icon": {
          "name": "cloud_upload.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "git push origin test",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "Clone",
                      "name": "TextViewDetail",
                      "attributes": {
                        "text_size": "10",
                        "ssh_script": "'cd ' + eigenFragment.getViewState(991001) + '; git push origin test' "
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "EigenFrame Github Webpage",
        "icon": {
          "name": "import_export.",
          "location": "top"
        },
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "EigenFrame Github Repository",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "WebView",
                      "layout_width": "match_parent",
                      "layout_height": "wrap_content",
                      "is_javascript_enabled": true,
                      "url": "https://github.com/jsawaya/eigenframe"
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "Clone",
      "name": "TextViewLabel",
      "attributes": {
        "text": "git file-path: \n(relative to git working directory)"
      }
    },
    {
      "type": "EditText",
      "id": 991003,
      "max_length": 200,
      "is_single_line": true,
      "layout_width": "match_parent",
      "text": "web/frames/playlist.json",
      "text_color": "#ffffff",
      "text_size": "20",
      "gravity": "left",
      "background_color": "#000000",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "git diff from master",
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "git diff from master",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "Clone",
                      "name": "TextViewDetail",
                      "attributes": {
                        "text_size": "10",
                        "ssh_script": "'cd ' + eigenFragment.getViewState(991001) + '; git diff master:' + eigenFragment.concatPaths(991002, 991003) + ' -- ' + eigenFragment.concatPaths(991002, 991003); "
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
        "text": "git restore (revert to master)",
        "on_click": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
            "title": "git restore",
            "component_list": [
              {
                "type": "Clone",
                "name": "LayoutVerticalScrollable",
                "attributes": {
                  "component_list": [
                    {
                      "type": "Clone",
                      "name": "TextViewDetail",
                      "attributes": {
                        "text_size": "10",
                        "ssh_script": "'cd ' + eigenFragment.getViewState(991001) + '; git restore ' + eigenFragment.concatPaths(991002, 991003) "
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    }
  ]
}


