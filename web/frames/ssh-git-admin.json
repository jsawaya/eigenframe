{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "component_list": [

    {
      "type": "TextView",
      "layout_width": "match_parent",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Enter remote host git-repository path: \n(relative to sftp home directory)"
    },

    {
      "type": "EditText",
      "id": 991001,
      "max_length": 200,
      "is_single_line": true,
      "layout_width": "match_parent",
      "text": "git-repos/eigenframe",
      "text_color": "#ffffff",
      "background_color": "#000000",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      }
    },

    {
      "type": "TextView",
      "layout_width": "match_parent",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Enter git-file Path: \n(relative to git-repository path)"
    },

    {
      "type": "EditText",
      "id": 991002,
      "max_length": 200,
      "is_single_line": true,
      "layout_width": "match_parent",
      "text": "web/frames/playlist.json",
      "text_color": "#ffffff",
      "background_color": "#000000",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      }
    },

    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },


    {
      "type": "Button",
      "layout_width": "match_parent",
      "text": "Show remote host git repo",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title": "Show remote host git repo",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "text_size": "14",
                "gravity": "left",
                "text_color": "#ffffff",
                "sftp-script": "'directory ' + eigenFragment.getViewState(991001)"
              }
            ]
          }
        ]
      }
    },

    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Compare RemoteFile to github mast",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "on_click": {
        "type": "PopupTextView",
        "title": "Compare RemoteFile to github master",
        "font": "font/droid-sans-mono/DroidSansMono.ttf",
        "ssh_script": "'cd ' + eigenFragment.getViewState(991001) + '; git diff master:' + eigenFragment.getViewState(991002) + ' -- ' + eigenFragment.getViewState(991002) "
      }
    },

    {
      "type": "Button",
      "layout_width": "match_parent",
      "text": "Compare RemoteFile to github master",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title": "Compare RemoteFile to github master",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "gravity": "left",
                "font": "font/droid-sans-mono/DroidSansMono.ttf",
                "text_color": "#ffffff",
                "ssh_script": "'cd ' + eigenFragment.getViewState(991001) + '; git diff master:' + eigenFragment.getViewState(991002) + ' -- ' + eigenFragment.getViewState(991002) "
              }
            ]
          }
        ]
      }
    },

    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },

    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "execute git restore command",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title": "remove ",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text_size": "14",
                "gravity": "left",
                "text_color": "#ffffff",
                "sftp_script": "'rm ' + eigenFragment.getViewState(999001)"
              }
            ]
          }
        ]
      }
    },

    {
      "type": "Button",
      "layout_width": "match_parent",
      "text": "execute git restore command",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title": "git restore",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text_size": "14",
                "gravity": "left",
                "text_color": "#ffffff",
                "ssh_script": "'cd git-repos/eigenframe; git restore ~/' + eigenFragment.getViewState(999001)"
              }
            ]
          }
        ]
      }
    }


  ]
}


