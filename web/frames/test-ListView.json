{
  "type": "LinearLayout",
  "orientation": "vertical",
  "layout_width": "match_parent",
  "layout_height": "match_parent",
  "component_list": [
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Test ListView",
      "text_size": "22",
      "gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
      "text_color": "#ffffff",
      "icon": {
        "name": "ic_launcher_round.",
        "location": "top"
      }
    },
    {
      "type": "HorizontalLine",
      "size": 2,
      "color": "#00ff00"
    },
    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "ListView getViewIdState(700)",
      "text_color": "#ffffff",
      "background_color": "#654321",
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.showToast('ListView getViewIdState: '+eigenFragment.getViewIdState(700))"
        ]
      }
    },
    {
      "type": "ListView",
      "id": 700,
      "layout_width": "match_parent",
      "layout_height": "match_parent",
      "background_color": "#123456",
      "checked_option": 1,
      "key_list": [
        "test1.txt.asc",
        "test1.json",
        "test1.zip",
        "test1.pdf",
        "test2.txt.asc",
        "test2.json",
        "test3.zip",
        "test4.pdf",
        "test4.txt.asc",
        "test5.json",
        "test5.zip",
        "test5.pdf"
      ],
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "var pos = eigenFragment.getOptionInteger('position', 0)",
          "var opt = eigenFragment.getOptionString('option', '')",
          "eigenActivity.showToast('ListView selected: '+ pos + ' - ' + opt)"
        ]
      },
      "item_layout": {
        "type": "LinearLayout",
        "orientation": "horizontal",
        "layout_width": "wrap_content",
        "layout_height": "wrap_content",
        "component_list": [
          {
            "type": "TextView",
            "text_script_list": [
              "eigenFragment.getOptionInteger('position', 0) + ' - ' + eigenFragment.getOptionString('metadata', '')"
            ],
            "text_size": "28",
            "text_color": "#ffffff",
            "layout_width": "wrap_content",
            "layout_height": "wrap_content"
          },
          {
            "type": "CheckBox",
            "x-id": 200,
            "layout_width": "wrap_content",
            "layout_height": "wrap_content",
            "checked": false,
            "text_color": "#ffffff",
            "background_color": "#123456",
            "padding": {
              "left": 20,
              "top": 20,
              "right": 20,
              "bottom": 20
            },
            "margin": {
              "left": 40,
              "top": 40,
              "right": 40,
              "bottom": 40
            },
            "on_click": {
              "type": "JavaScript",
              "script_list": [
                "var str = eigenFragment.getOptionInteger('position', 0) + ' - ' + eigenFragment.getOptionString('metadata', '')",
                "eigenActivity.showToast(str)"
              ]
            }
          }
        ]
      }
    }
  ]
}
