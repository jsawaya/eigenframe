{
  "type": "LinearLayout",
  "orientation": "vertical",
  "layout_width": "match_parent",
  "layout_height": "match_parent",
  "component_list": [
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Test ListView",
      "text_size": "20",
      "gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
      "text_color": "#ffffff",
      "icon": {
        "name": "sawaya_eigenframe_icon.png",
        "location": "top"
      }
    },
    {
      "type": "HorizontalLine",
      "size": 2,
      "color": "#00ff00"
    },
    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "ListView getViewIdState(700)",
      "text_color": "#ffffff",
      "background_color": "#ff00ff",
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.showToast('ListView getViewIdState: '+eigenFragment.getViewIdState(700))"
        ]
      }
    },
    {
      "type": "ListView",
      "id": 700,
      "layout_width": "match_parent",
      "layout_height": "match_parent",
      "background_color": "#ff00ff",
      "checked_option": 1,
      "key_list": [
        "test1.txt.asc",
        "test1.json",
        "test1.zip",
        "test1.pdf",
        "test2.txt.asc",
        "test2.json",
        "test3.zip",
        "test4.pdf",
        "test4.txt.asc",
        "test5.json",
        "test5.zip",
        "test5.pdf"
      ],
      "on_click": {
        "type": "JavaScript",
        "x-script_list": [
          "java.lang.System.out.println(3)",
          "obj = { run: function() { print('hi'); } }",
          "obj.run()",
          "r = new java.lang.Runnable(obj)",
          "t = new java.lang.Thread(r)",
          "t.start()",
          "Object x = scope.get('x', scope)",
          "if (x == Scriptable.NOT_FOUND) {System.out.println('x is not defined.');} else {System.out.println('x = ' + Context.toString(x));}",

          "eigenActivity.showToast('ListView selected: '+eigenFragment.getViewIdState(700))"
        ],
        "script_list": [
          "var pos = eigenFragment.getMapValueInteger(eigenMap, 'position', 0)",
          "var opt = eigenMap.get('option')",
          "eigenActivity.showToast('ListView selected: '+ pos + ' - ' + opt)"
        ]
      },
      "eigen_frame": {
        "type": "TextView",
        "text_script_list": [
          "(eigenFragment.getMapValueInteger(eigenMap, 'position', 0) + 1) + ' - ' + eigenMap.get('metadata')"
        ],
        "text_size": "20",
        "text_color": "#ffffff",
        "layout_width": "wrap_content",
        "layout_height": "wrap_content"
      }
    }
  ]
}
