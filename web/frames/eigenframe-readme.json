				"background_color": "#111111",
				"title": "GitHub: jsawaya/eigenframe/README.md",
				"icon": {
					"name": "info.",
					"location": "left"
				},
				"margin": {
					"left": 10,
					"top": 10,
					"right": 10,
					"bottom": 10
				},
				"component_list": [
					{
						"type": "LinearLayout",
						"scrollable": true,
						"orientation": "vertical",
						"gravity": "center_horizontal",
						"layout_width": "match_parent",
						"layout_height": "match_parent",
						"component_list": [
							{
								"type": "WebView",
								"layout_width": "match_parent",
								"layout_height": "match_parent",
								"is_javascript_enabled": false,
								"url": "https://github.com/jsawaya/eigenframe/blob/beta/README.md"
							}
						]
					}
				]
			}
		}
	]
