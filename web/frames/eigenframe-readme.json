{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "match_parent",
  "component_list": [
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text_size": "14",
      "text_color": "#ffffff",
			"text": "EigenFrame Documentation"
    },
    {
      "type": "Clone",
      "name": "ButtonDefault",
      "attributes": {
				"text": "GitHub: jsawaya/eigenframe/README.md",
        "icon": {
					"name": "open_browser.",
          "location": "top"
        },
        "on_complete": {
          "type": "Clone",
          "name": "PopupScreenDefault",
          "attributes": {
						"title": "GitHub: jsawaya/eigenframe/README.md",
            "component_list": [
              {
								"type": "x-WebView",
								"layout_width": "match_parent",
								"layout_height": "wrap_content",
								"is_javascript_enabled": true,
								"url": "https://github.com/jsawaya/eigenframe/blob/beta/README.md"
              }
            ]
          }
        }
      }
		},
		{
			"type": "Button",
			"layout_width": "match_parent",
			"layout_height": "wrap_content",
			"text": "Test PopupScreen with a component_list(TextView)",
			"text_color": "#ffffff",
			"background_color": "#ff0000",
			"on_click": {
				"type": "PopupScreen",
				"layout_width": "match_parent",
				"layout_height": "wrap_content",
				"text_size": "14",
				"text_color": "#ffffff",
				"background_color": "#111111",
				"title": "PopupScreen with WebView",
				"icon": {
					"name": "info.",
					"location": "top"
				},
				"component_list": [
					{
						"type": "LinearLayout",
						"scrollable": true,
						"orientation": "vertical",
						"gravity": "center_horizontal",
						"layout_width": "match_parent",
						"layout_height": "wrap_content",
						"component_list": [
							{
								"type": "TextView",
								"layout_width": "match_parent",
								"layout_height": "wrap_content",
								"text": "Readme",
								"text_size": "14",
								"gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
								"text_color": "#ffffff"
							},
							{
								"type": "WebView",
								"layout_width": "match_parent",
								"layout_height": "wrap_content",
								"is_javascript_enabled": true,
								"url": "https://github.com/jsawaya/eigenframe/blob/beta/README.md"
							}
						]
					}
				]
			}
		}
	]
}
