{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "text": "Test EigenScript",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text_size": "20",
      "text_color": "#ffffff"
    },
    {
      "type": "HorizontalLine",
      "size": 1,
      "color": "#00ff00"
    },
    {
      "type": "Button",
      "text": [
        "JavaScript using script_list: ",
        "x = 8*5; eigenActivity.showToast('var x: '+x); x;"
      ],
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text_color": "#ffffff",
      "background_color": "#ff0000",
      "icon": {
        "name": "info.jpg",
        "location": "left"
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "x = 8*5",
          "eigenActivity.showToast('var x: '+x)",
          "x"
        ]
      }
    },
    {
      "type": "Button",
      "text": "JavaScript using script_list",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text_color": "#ffffff",
      "background_color": "#11ff0000",
      "icon": {
        "name": "info.jpg",
        "location": "left"
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "htmlString = eigenActivity.getString(com.sawaya.R.string.change_log)",
          "titleString = eigenActivity.getString(com.sawaya.R.string.recent_changes_title)",
          "java.lang.System.out.println(htmlString)",
          "java.lang.System.out.println(titleString)",
          "popupScreen = new com.sawaya.eigenframe.PopupScreen(eigenActivity)",
          "popupScreen.createPopupTextWindow()",
          "popupScreen.setPopupTextTitle(titleString)",
          "popupScreen.setPopupHtml(htmlString, null)",
          "popupScreen.showPopupTextWindow(eigenActivity.viewPager)"
        ]
      }
    },
    {
      "type": "HorizontalLine",
      "size": 2,
      "color": "#00ff00"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Popup TextView/text",
      "text_color": "#ffffff",
      "background_color": "#22ffff00",
      "on_click": {
        "type": "PopupTextView",
        "title": "Popup TextView",
        "text": "this is a test"
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Popup TextView/text_list",
      "text_color": "#ffffff",
      "background_color": "#22ffff00",
      "on_click": {
        "type": "PopupTextView",
        "title": "Popup TextView",
        "text_list": [
          "this is line 1",
          "this is line 2",
          "this is line 3"
        ]
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Popup TextView/url",
      "text_color": "#ffffff",
      "background_color": "#22ff0000",
      "on_click": {
        "type": "PopupTextView",
        "title": "Popup TextView",
        "url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/html/about.html"
      }
    },
    {
      "type": "HorizontalLine",
      "size": 2,
      "color": "#00ff00"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Popup HtmlView/html_list",
      "text_color": "#ffffff",
      "background_color": "#11ff0000",
      "icon": {
        "name": "info.jpg",
        "location": "left"
      },
      "on_click": {
        "type": "PopupHtmlView",
        "title": "PopupHtmlView/html_list",
        "html_list": [
          "9/27/2019 Version 0.1<hr/>",
          "- Popup dynamic html with access to application-embedded icons [<img src='info.jpg'>]"
        ]
      }
    },
    {
      "type": "LinearLayout",
      "scrollable": true,
      "orientation": "horizontal",
      "layout_width": "match_parent",
      "layout_height": "match_parent",
      "component_list": [
        {
          "type": "Button",
          "layout_width": "wrap_content",
          "layout_height": "wrap_content",
          "text": "About",
          "text_color": "#ffffff",
          "background_color": "#000000",
          "margin": {
            "left": 4,
            "top": 4,
            "right": 4,
            "bottom": 4
          },
          "icon": {
            "name": "info.jpg",
            "location": "left"
          },
          "on_click": {
            "type": "PopupHtmlView",
            "title": "PopupHtmlView",
            "url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/html/about.html"
          }
        },
        {
          "type": "Button",
          "layout_width": "wrap_content",
          "layout_height": "wrap_content",
          "text": "Recent Changes",
          "text_color": "#ffffff",
          "background_color": "#000000",
          "icon": {
            "name": "info.jpg",
            "location": "left"
          },
          "on_click": {
            "type": "PopupHtmlView",
            "title": "PopupHtmlView",
            "url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/html/recent-changes.html"
          },
          "padding": {
            "left": 4,
            "top": 4,
            "right": 4,
            "bottom": 4
          },
          "margin": {
            "left": 10,
            "top": 10,
            "right": 10,
            "bottom": 10
          }
        }
      ]
    }
  ]
}
