{
	"type": "LinearLayout",
	"scrollable": true,
	"orientation": "vertical",
	"gravity": "center_horizontal",
	"layout_width": "match_parent",
	"component_list": [
		{
			"type": "Clone",
			"name": "HorizontalLine"
		},
		{
			"type": "Clone",
			"name": "TextViewLabel",
			"attributes": {
				"text": "OpenPGP Cryptography"
			}
		},
		{
			"type": "Clone",
			"name": "TextViewDetail",
			"attributes": {
				"text_list": [
					"Requires Apache2, Ruby and GnuPG installed, and httpd running.",
					"These methods use HTTP/CGI (post method) to invoke Ruby which calls GnuPG"
				]
			}
		},
		{
			"type": "Clone",
			"name": "TextViewDetail",
			"attributes": {
				"text_list": [
					"Show the current list of public keys that have been imported"
				]
			}
		},
		{
			"type": "Button",
			"text": "Show Imported Public Key Listings",
			"layout_width": "wrap_content",
			"layout_height": "wrap_content",
			"text_color": "#ffffff",
			"background_color": "#654321",
			"icon": {
				"name": "info.",
				"location": "top"
			},
			"margin": {
				"left": 10,
				"top": 10,
				"right": 10,
				"bottom": 10
			},
			"on_click": {
				"type": "UrlRequest",
				"id": 6602,
				"is_eigen_response": false,
				"url": "http://localhost:8080/cgi-bin/cgi_ruby.rb",
				"parameter_list": [
					{
						"name": "ruby",
						"value_list": [
							"gpg_list_public_keys().to_json.to_s"
						]
					}
				],
				"on_complete": {
					"type": "Clone",
					"name": "PopupScreenDefault",
					"attributes": {
						"title": "List Public Keys",
						"component_list": [
							{
								"type": "Clone",
								"name": "LayoutVerticalScrollable",
								"attributes": {
									"component_list": [
										{
											"type": "Clone",
											"name": "TextViewDetail",
											"attributes": {
												"url": "file:///data/user/0/com.sawaya.eigenframe/files/UrlRequest:6602"
											}
										}
									]
								}
							}
						]
					}
				}
			}
		},
		{
			"type": "Clone",
			"name": "TextViewDetail",
			"attributes": {
				"text_list": [
					"Show the current list of your private keys that have been imported"
				]
			}
		},
		{
			"type": "Button",
			"text": "Show Imported Private Key Listings",
			"layout_width": "wrap_content",
			"layout_height": "wrap_content",
			"text_color": "#ffffff",
			"background_color": "#654321",
			"icon": {
				"name": "info.",
				"location": "top"
			},
			"margin": {
				"left": 10,
				"top": 10,
				"right": 10,
				"bottom": 10
			},
			"on_click": {
				"type": "UrlRequest",
				"id": 6603,
				"is_eigen_response": false,
				"url": "http://localhost:8080/cgi-bin/cgi_ruby.rb",
				"parameter_list": [
					{
						"name": "ruby",
						"value_list": [
							"gpg_list_private_keys().to_json.to_s"
						]
					}
				],
				"on_complete": {
					"type": "Clone",
					"name": "PopupScreenDefault",
					"attributes": {
						"title": "List Private Keys",
						"component_list": [
							{
								"type": "Clone",
								"name": "LayoutVerticalScrollable",
								"attributes": {
									"component_list": [
										{
											"type": "Clone",
											"name": "TextViewDetail",
											"attributes": {
												"url": "file:///data/user/0/com.sawaya.eigenframe/files/UrlRequest:6603"
											}
										}
									]
								}
							}
						]
					}
				}
			}
		},
		{
			"type": "Clone",
			"name": "TextViewDetail",
			"attributes": {
				"text_list": [
					"Import someone's public key file",
					" - which enables you to encrypt files for that person",
					" - and you can verify files with detached signatures from that person"
				]
			}
		},
		{
			"type": "Clone",
			"name": "ButtonDefault",
			"attributes": {
				"text": "Import a Public Key",
				"icon": {
					"name": "open_browser.",
					"location": "top"
				},
				"on_click": {
					"type": "Clone",
					"name": "PopupScreenDefault",
					"attributes": {
						"title": "Import a Public Key",
						"url_script": "eigenFragment.getCacheString('RootUrl')+'frames/http-cgi-ruby-pgp-import-public-key.json'"
					}
				}
			}
		},
		{
			"type": "Clone",
			"name": "TextViewDetail",
			"attributes": {
				"text_list": [
					"Import your own key files",
					" - which enables you to encrypt/decrypt your files",
					" - and you can sign a file (create a detached signature) to ensure it has not been modified"
				]
			}
		},
		{
			"type": "Clone",
			"name": "ButtonDefault",
			"attributes": {
				"text": "Import Your Private Key",
				"icon": {
					"name": "open_browser.",
					"location": "top"
				},
				"on_click": {
					"type": "Clone",
					"name": "PopupScreenDefault",
					"attributes": {
						"title": "Import Your Private Key",
						"url_script": "eigenFragment.getCacheString('RootUrl')+'frames/http-cgi-ruby-pgp-import-private-key.json'"
					}
				}
			}
		},
		{
			"type": "Clone",
			"name": "TextViewDetail",
			"attributes": {
				"text_list": [
					"Create a detached signature for a selected file",
					" - the signature file is created in the same directory, with a filename suffix '.sig' "
				]
			}
		},
		{
			"type": "Clone",
			"name": "ButtonDefault",
			"attributes": {
				"text": "Create Detached Signature (for selected file)",
				"icon": {
					"name": "open_browser.",
					"location": "top"
				},
				"on_click": {
					"type": "Clone",
					"name": "PopupScreenDefault",
					"attributes": {
						"title": "Create Detached Signature (for selected file)",
						"url_script": "eigenFragment.getCacheString('RootUrl')+'frames/http-cgi-ruby-pgp-sign-detached.json'"
					}
				}
			}
		},
		{
			"type": "Clone",
			"name": "TextViewDetail",
			"attributes": {
				"text_list": [
					"Verify a selected file that has a detached signature in the same directory",
					" - the selected file, must have an associated signature file"
				]
			}
		},
		{
			"type": "Clone",
			"name": "ButtonDefault",
			"attributes": {
				"text": "Verify Selected File (that has a Detached Signature)",
				"icon": {
					"name": "open_browser.",
					"location": "top"
				},
				"on_click": {
					"type": "Clone",
					"name": "PopupScreenDefault",
					"attributes": {
						"title": "Verify Selected File (that has a Detached Signature)",
						"url_script": "eigenFragment.getCacheString('RootUrl')+'frames/http-cgi-ruby-pgp-verify-detached.json'"
					}
				}
			}
		},
		{
			"type": "Clone",
			"name": "TextViewDetail",
			"attributes": {
				"text_list": [
					"Encrypt a selected file",
					" - indicate the recipients by keyid or email-address (see public key listing) "
				]
			}
		},
		{
			"type": "Clone",
			"name": "ButtonDefault",
			"attributes": {
				"text": "Encrypt File",
				"icon": {
					"name": "open_browser.",
					"location": "top"
				},
				"on_click": {
					"type": "Clone",
					"name": "PopupScreenDefault",
					"attributes": {
						"title": "Encrypt File",
						"url_script": "eigenFragment.getCacheString('RootUrl')+'frames/http-cgi-ruby-pgp-encrypt.json'"
					}
				}
			}
		},
		{
			"type": "Clone",
			"name": "TextViewDetail",
			"attributes": {
				"text_list": [
					"Decrypt a selected file",
					" - enter a passphrase associated with one of the keys that encrypted the file"
				]
			}
		},
		{
			"type": "Clone",
			"name": "ButtonDefault",
			"attributes": {
				"text": "Decrypt File",
				"icon": {
					"name": "open_browser.",
					"location": "top"
				},
				"on_click": {
					"type": "Clone",
					"name": "PopupScreenDefault",
					"attributes": {
						"title": "Decrypt File",
						"url_script": "eigenFragment.getCacheString('RootUrl')+'frames/http-cgi-ruby-pgp-decrypt.json'"
					}
				}
			}
		},
		{
			"type": "Clone",
			"name": "TextViewDetail",
			"attributes": {
				"text_list": [
					"TO DO: export keys"
				]
			}
		}
	]
}

