{
	"type": "LinearLayout",
	"scrollable": true,
	"orientation": "vertical",
	"gravity": "center_horizontal",
	"layout_width": "match_parent",
	"layout_height": "wrap_content",
	"component_list": [
		{
			"type": "Clone",
			"name": "TextViewLabel",
			"attributes": {
				"text": "Photography"
			}
		},
		{
			"type": "Clone",
			"name": "HorizontalLine"
		},
		{
			"type": "Clone",
			"name": "TextViewDetail",
			"attributes": {
				"text_list": [
					"JavaScript provides access to camera hardware and image rendering..."
				]
			}
		},
		{
			"type": "Clone",
			"name": "ButtonDefault",
			"attributes": {
				"text": "Take Photo",
				"icon": {
					"name": "add_photo.",
					"location": "top"
				},
				"on_click": {
					"type": "JavaScript",
					"script_list": [
						"var jpg_filename = eigenActivity.captureCameraImage()",
						"eigenFragment.setCacheString('CameraImage', jpg_filename)"
					]
				}
			}
		},
		{
			"type": "Clone",
			"name": "ButtonDefault",
			"attributes": {
				"text": "View Photo",
				"icon": {
					"name": "open_browser.",
					"location": "top"
				},
				"on_click": {
					"type": "Clone",
					"name": "PopupScreenCameraImage"
				}
			}
		},
		{
			"type": "Clone",
			"name": "HorizontalLine"
		},
		{
			"type": "JavaScript",
			"script_list": [
				"eigenFragment.setCacheString('SelectFilePrompt', 0, 'Select Remote Image File')",
				"eigenFragment.setCacheString('WorkingDirectory', '')",
				"eigenFragment.setCacheString('SelectedPath', 'git-repos/eigenframe/web/screenshots')",
				"eigenFragment.setCacheString('SelectedFile', '')",
				"eigenFragment.setIntegerVariable('TargetViewId', 0, 999711)"
			]
		},
		{
			"type": "Clone",
			"name": "JavaScriptSelectFilePath"
		},
		{
			"type": "Clone",
			"name": "ButtonDefault",
			"attributes": {
				"text": "Show Remote Image File",
				"icon": {
					"name": "image.",
					"location": "top"
				},
				"on_click": {
					"type": "Clone",
					"name": "PopupScreenImageRemoteFile"
				}
			}
		}
	]
}


