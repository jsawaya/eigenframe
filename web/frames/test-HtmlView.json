      {
        "type": "LinearLayout",
        "scrollable": true,
        "orientation": "vertical",
        "layout-width": "match_parent",
        "layout-height": "match_parent",
        "component-list": [
          {
            "type": "HtmlView",
            "layout-width": "match_parent",
            "layout-height": "wrap_content",
            "text-size": "14",
            "text-color": "#ffffff",
            "url": "https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/html/about.html"
          }
        ]
      }

    ]
  }
