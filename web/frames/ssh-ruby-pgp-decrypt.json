{
	"comment": "set the HomeDirectory from sftp pwd",
	"type": "SecureFtp",
	"id": 411000,
	"sftp_script": "'pwd'",
	"on_complete": {
		"type": "LinearLayout",
		"scrollable": true,
		"orientation": "vertical",
		"gravity": "center_horizontal",
		"layout_width": "match_parent",
		"component_list": [
			{
				"type": "Clone",
				"name": "HorizontalLine"
			},
			{
				"type": "Clone",
				"name": "TextViewLabel",
				"attributes": {
					"text": "Decrypt File"
				}
			},
			{
				"type": "Clone",
				"name": "TextViewDetail",
				"attributes": {
					"text_list": [
						"OpenPGP Decryption",
						"- your private key enables you to open files that have been encrypted with your public key",
						"- try decrypting a file encrypted with demo-private-key's public key: ",
						"passphrase: demo"
					]
				}
			},
			{
				"type": "JavaScript",
				"script_list": [
					"eigenFragment.setCacheString('SelectFilePrompt', 0, 'Select Encrypted File')",
					"eigenFragment.setCacheString('WorkingDirectory', '')",
					"eigenFragment.setCacheString('SelectedPath', 'git-repos/eigenframe')",
					"eigenFragment.setCacheString('SelectedFile', '')",
					"eigenFragment.setIntegerVariable('TargetViewId', 0, 999713)"
				]
			},
			{
				"type": "Clone",
				"name": "JavaScriptSelectFilePath"
			},
			{
				"type": "Clone",
				"name": "EditTextPgpPassword6606"
			},
			{
				"type": "Button",
				"text": "Decrypt File",
				"layout_width": "wrap_content",
				"layout_height": "wrap_content",
				"text_color": "#ffffff",
				"background_color": "#654321",
				"icon": {
					"name": "info.",
					"location": "top"
				},
				"on_click": {
					"type": "SecureShell",
					"id": 6605,
					"is_eigen_response": false,
					"ssh_script_list": [
						"var dir = 'cd /data/data/com.termux/files/home/git-repos/eigenframe/cgi-bin; ' ",
						"var targetVid = eigenFragment.getIntegerVariable('TargetViewId')",
						"var encrypted_file = eigenFragment.getViewState(targetVid)",
						"output_file = encrypted_file+'.out'",
						"password = eigenFragment.getViewState(6606)",
						"dir + 'echo '+ password + ' | ruby ssh-gpg-decrypt.rb \"' + password + '\" ' + encrypted_file + ' ' + output_file"
					],
					"on_complete": {
						"type": "Clone",
						"name": "PopupScreenDefault",
						"attributes": {
							"title": "Decrypt File",
							"component_list": [
								{
									"type": "Clone",
									"name": "LayoutVerticalScrollable",
									"attributes": {
										"component_list": [
											{
												"type": "Clone",
												"name": "TextViewDetail",
												"attributes": {
													"url": "file:///data/user/0/com.sawaya.eigenframe/files/SecureShell:6605"
												}
											}
										]
									}
								}
							]
						}
					}
				}
			}
		]
	}
}
