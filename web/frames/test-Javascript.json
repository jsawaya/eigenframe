{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "text": "Test EigenScript",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text_size": "14",
      "text_color": "#ffffff"
    },
    {
      "type": "HorizontalLine",
      "size": 1,
      "color": "#00ff00"
    },
    {
      "type": "Button",
      "text": [
        "JavaScript using script_list: ",
        "x = 8*5; eigenActivity.showToast('var x: '+x); x;"
      ],
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text_color": "#ffffff",
      "background_color": "#ff0000",
      "icon": {
        "name": "info.jpg",
        "location": "left"
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "x = 8*5",
          "eigenActivity.showToast('var x: '+x)"
        ]
      }
    },
    {
      "type": "Button",
      "text": "JavaScript using script_list",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text_color": "#ffffff",
      "background_color": "#11ff0000",
      "icon": {
        "name": "info.jpg",
        "location": "left"
      },
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "htmlString = eigenActivity.getString(com.sawaya.R.string.change_log)",
          "titleString = eigenActivity.getString(com.sawaya.R.string.recent_changes_title)",
          "java.lang.System.out.println(htmlString)",
          "java.lang.System.out.println(titleString)",
          "popupTextWindow = new com.sawaya.eigenframe.PopupTextView(eigenActivity)",
          "popupTextWindow.createPopupTextWindow()",
          "popupTextWindow.setPopupTextTitle(titleString)",
          "popupTextWindow.setPopupHtml(htmlString, null)",
          "popupTextWindow.showPopupTextWindow(eigenActivity.viewPager)"
        ]
      }
    }

  ]
}
