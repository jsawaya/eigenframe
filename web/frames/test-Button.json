{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "LinearLayout",
      "orientation": "horizontal",
      "gravity": "center_vertical",
      "layout_width": "match_parent",
      "layout_height": "100",
      "component_list": [
        {
          "type": "TextView",
          "layout_width": "wrap_content",
          "layout_height": "wrap_content",
          "layout_weight": "10",
          "text_size": "14",
          "text_color": "#ffffff",
          "text": "Test TextView and Buttons with Icons"
        },
        {
          "type": "Button",
          "layout_width": "wrap_content",
          "layout_height": "wrap_content",
          "layout_weight": "1",
          "text": " ",
          "background_color": "#00000000",
          "icon": {
            "name": "close.",
            "location": "right"
          },
          "on_click": {
            "type": "JavaScript",
            "script_list": [
              "eigenActivity.finish()"
            ]
          }
        }
      ]
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "TextView",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text_list": [
        "No Icon",
        "attached"
      ],
      "text_size": 20,
      "text_color": "#ffffff",
      "padding": {
        "left": 40,
        "top": 41,
        "right": 42,
        "bottom": 43
      }
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "LinearLayout",
      "scrollable": true,
      "orientation": "horizontal",
      "gravity": "center_vertical",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "component_list": [
        {
          "type": "VerticalLine",
          "size": 2,
          "color": "#00ff00"
        },
        {
          "type": "TextView",
          "layout_width": "wrap_content",
          "layout_height": "wrap_content",
          "layout_weight": "1",
          "text": "left",
          "text_size": 20,
          "text_color": "#ffffff",
          "gravity": "left",
          "icon": {
            "name": "info.",
            "location": "left"
          }
        },
        {
          "type": "VerticalLine",
          "size": 1,
          "color": "#00ff00"
        },
        {
          "type": "TextView",
          "layout_width": "wrap_content",
          "layout_height": "wrap_content",
          "layout_weight": "1",
          "text": "top",
          "text_size": 20,
          "text_color": "#ffffff",
          "gravity": "center_horizontal",
          "icon": {
            "name": "info.",
            "location": "top"
          }
        },
        {
          "type": "VerticalLine",
          "size": 1,
          "color": "#00ff00"
        },
        {
          "type": "TextView",
          "layout_width": "wrap_content",
          "layout_height": "wrap_content",
          "layout_weight": "1",
          "text": "right",
          "text_size": 20,
          "text_color": "#ffffff",
          "gravity": "right",
          "icon": {
            "name": "info.",
            "location": "right"
          }
        },
        {
          "type": "VerticalLine",
          "size": 2,
          "color": "#00ff00"
        }
      ]
    },
    {
      "type": "Clone",
      "name": "HorizontalLine"
    },
    {
      "type": "LinearLayout",
      "scrollable": true,
      "orientation": "horizontal",
      "gravity": "center_vertical",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "component_list": [
        {
          "type": "VerticalLine",
          "size": 2,
          "color": "#00ff00"
        },
        {
          "type": "Button",
          "layout_width": "wrap_content",
          "layout_height": "wrap_content",
          "layout_weight": "1",
          "text": "left",
          "text_color": "#ffffff",
          "background_color": "#00ffff",
          "icon": {
            "name": "info.",
            "location": "left"
          },
          "on_click": {
            "type": "JavaScript",
            "script": "eigenActivity.showToast('value: '+1)"
          }
        },
        {
          "type": "VerticalLine",
          "size": 2,
          "color": "#00ff00"
        },
        {
          "type": "Button",
          "layout_width": "wrap_content",
          "layout_height": "wrap_content",
          "layout_weight": "1",
          "text": "top",
          "text_color": "#ffffff",
          "background_color": "#0f0f0f",
          "icon": {
            "name": "info.",
            "location": "top"
          },
          "on_click": {
            "type": "JavaScript",
            "script": "eigenActivity.showToast('value: '+2)"
          }
        },
        {
          "type": "VerticalLine",
          "size": 2,
          "color": "#00ff00"
        },
        {
          "type": "Button",
          "layout_width": "wrap_content",
          "layout_height": "wrap_content",
          "layout_weight": "1",
          "text": "right",
          "text_color": "#ffffff",
          "background_color": "#ff00ff",
          "icon": {
            "name": "info.",
            "location": "right"
          },
          "on_click": {
            "type": "JavaScript",
            "script": "eigenActivity.showToast('value: '+3)"
          }
        },
        {
          "type": "VerticalLine",
          "size": 2,
          "color": "#00ff00"
        }
      ]
    }
  ]
}
