{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout-width": "match_parent",
  "layout-height": "wrap_content",
  "component-list": [
    {
      "type": "LinearLayout",
      "orientation": "horizontal",
      "gravity": "center",
      "layout-width": "match_parent",
      "layout-height": "100",
      "component-list": [
        {
          "type": "TextView",
          "layout-width": "wrap_content",
          "layout-height": "wrap_content",
          "layout-weight": "10",
          "text-size": "20",
          "text-color": "#ffffff",
          "text": "Test TextView and Buttons with Icons"
        },
        {
          "type": "Button",
          "layout-width": "wrap_content",
          "layout-height": "wrap_content",
          "layout-weight": "1",
          "text": " ",
          "background-color": "#00000000",
          "icon": {
            "name": "close.jpg",
            "location": "right"
          },
          "on-click": {
            "type": "JavaScript",
            "script-list": [
              "eigenActivity.finish()"
            ]
          }
        }
      ]
    },
    {
      "type": "HorizontalLine",
      "size": 2,
      "color": "#00ff00"
    },
    {
      "type": "TextView",
      "layout-width": "wrap_content",
      "layout-height": "wrap_content",
      "text-list": [
        "No Icon",
        "attached"
      ],
      "text-size": 20,
      "text-color": "#ffffff",
      "padding": {
        "left": 40,
        "top": 41,
        "right": 42,
        "bottom": 43
      }
    },
    {
      "type": "HorizontalLine",
      "size": 1,
      "color": "#00ff00"
    },
    {
      "type": "LinearLayout",
      "scrollable": true,
      "orientation": "horizontal",
      "layout-width": "match_parent",
      "layout-height": "wrap_content",
      "component-list": [
        {
          "type": "VerticalLine",
          "size": 2,
          "color": "#00ff00"
        },
        {
          "type": "TextView",
          "layout-width": "wrap_content",
          "layout-height": "wrap_content",
          "layout-weight": "1",
          "text": "left",
          "text-size": 20,
          "text-color": "#ffffff",
          "gravity": "left",
          "icon": {
            "name": "info.jpg",
            "location": "left"
          }
        },
        {
          "type": "VerticalLine",
          "size": 1,
          "color": "#00ff00"
        },
        {
          "type": "TextView",
          "layout-width": "wrap_content",
          "layout-height": "wrap_content",
          "layout-weight": "1",
          "text": "top",
          "text-size": 20,
          "text-color": "#ffffff",
          "gravity": "center_horizontal",
          "icon": {
            "name": "info.jpg",
            "location": "top"
          }
        },
        {
          "type": "VerticalLine",
          "size": 1,
          "color": "#00ff00"
        },
        {
          "type": "TextView",
          "layout-width": "wrap_content",
          "layout-height": "wrap_content",
          "layout-weight": "1",
          "text": "right",
          "text-size": 20,
          "text-color": "#ffffff",
          "gravity": "right",
          "icon": {
            "name": "info.jpg",
            "location": "right"
          }
        },
        {
          "type": "VerticalLine",
          "size": 2,
          "color": "#00ff00"
        }
      ]
    },
    {
      "type": "HorizontalLine",
      "size": 1,
      "color": "#00ff00"
    },
    {
      "type": "LinearLayout",
      "scrollable": true,
      "orientation": "horizontal",
      "layout-width": "match_parent",
      "layout-height": "wrap_content",
      "component-list": [
        {
          "type": "VerticalLine",
          "size": 2,
          "color": "#00ff00"
        },
        {
          "type": "Button",
          "layout-width": "wrap_content",
          "layout-height": "wrap_content",
          "layout-weight": "1",
          "text": "left",
          "text-color": "#ffffff",
          "background-color": "#00ffff",
          "icon": {
            "name": "info.jpg",
            "location": "left"
          },
          "on-click": {
            "type": "JavaScript",
            "script": "eigenActivity.showToast('value: '+1)"
          }
        },
        {
          "type": "VerticalLine",
          "size": 2,
          "color": "#00ff00"
        },
        {
          "type": "Button",
          "layout-width": "wrap_content",
          "layout-height": "wrap_content",
          "layout-weight": "1",
          "text": "top",
          "text-color": "#ffffff",
          "background-color": "#0f0f0f",
          "icon": {
            "name": "info.jpg",
            "location": "top"
          },
          "on-click": {
            "type": "JavaScript",
            "script": "eigenActivity.showToast('value: '+2)"
          }
        },
        {
          "type": "VerticalLine",
          "size": 2,
          "color": "#00ff00"
        },
        {
          "type": "Button",
          "layout-width": "wrap_content",
          "layout-height": "wrap_content",
          "layout-weight": "1",
          "text": "right",
          "text-color": "#ffffff",
          "background-color": "#ff00ff",
          "icon": {
            "name": "info.jpg",
            "location": "right"
          },
          "on-click": {
            "type": "JavaScript",
            "script": "eigenActivity.showToast('value: '+3)"
          }
        },
        {
          "type": "VerticalLine",
          "size": 2,
          "color": "#00ff00"
        }
      ]
    },
    {
      "type": "Button",
      "layout-width": "wrap_content",
      "layout-height": "wrap_content",
      "text": "create shortcut for app1_localhost.json",
      "text-color": "#ffffff",
      "background-color": "#ff00ff",
      "on-click": {
        "type": "JavaScript",
        "script-list": [
          "eigenActivity.addShortcut('app1-localhost', 'http://localhost:8080/apps/app1_localhost.json')",
          "eigenActivity.finish()"
        ]
      }
    },
    {
      "type": "Button",
      "layout-width": "wrap_content",
      "layout-height": "wrap_content",
      "text": "create shortcut for app2_localhost.json",
      "text-color": "#ffffff",
      "background-color": "#ff00ff",
      "on-click": {
        "type": "JavaScript",
        "script-list": [
          "eigenActivity.addShortcut('app2-localhost', 'http://localhost:8080/apps/app2_localhost.json')",
          "eigenActivity.finish()"
        ]
      }
    },
    {
      "type": "VerticalLine",
      "size": 2,
      "color": "#00ff00"
    },
    {
      "type": "Button",
      "layout-width": "wrap_content",
      "layout-height": "wrap_content",
      "text": "create shortcut for app1.json",
      "text-color": "#ffffff",
      "background-color": "#ff00ff",
      "on-click": {
        "type": "JavaScript",
        "script-list": [
          "eigenActivity.addShortcut('app1', 'https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/apps/app1.json')",
          "eigenActivity.finish()"
        ]
      }
    },
    {
      "type": "Button",
      "layout-width": "wrap_content",
      "layout-height": "wrap_content",
      "text": "create shortcut for app2.json",
      "text-color": "#ffffff",
      "background-color": "#ff00ff",
      "on-click": {
        "type": "JavaScript",
        "script-list": [
          "eigenActivity.addShortcut('app2', 'https://raw.githubusercontent.com/jsawaya/eigenframe/master/web/apps/app2.json')",
          "eigenActivity.finish()"
        ]
      }
    }
  ]
}
