{
  "comment": "set the HomeDirectory from sftp pwd",
  "type": "SecureFtp",
  "id": 411000,
  "sftp": "pwd",
  "on_complete": {
    "type": "LinearLayout",
    "scrollable": true,
    "orientation": "vertical",
    "gravity": "center_horizontal",
    "layout_width": "match_parent",
    "layout_height": "wrap_content",
    "component_list": [
      {
        "type": "Clone",
        "name": "TextViewLabel",
        "attributes": {
          "text": "Edit Remote Text File"
        }
      },
      {
        "type": "Clone",
        "name": "TextViewDetail",
        "attributes": {
          "text_list": [
            "Select the remote file, or just type the file path, then click [Edit Remote Text File]"
          ]
        }
      },
      {
        "type": "Clone",
        "name": "HorizontalLine"
      },
			{
				"type": "JavaScript",
				"script_list": [
					"eigenFragment.setCacheString('SelectFilePrompt', 0, 'Select Remote File')",
					"eigenFragment.setCacheString('WorkingDirectory', '')",
					"eigenFragment.setCacheString('SelectedPath', 'git-repos/eigenframe')",
					"eigenFragment.setCacheString('SelectedFile', '')",
					"eigenFragment.setIntegerVariable('TargetViewId', 0, 999723)"
				]
			},
			{
				"type": "Clone",
				"name": "JavaScriptSelectFilePath"
			},
			{
				"type": "Clone",
				"name": "ButtonDefault",
				"attributes": {
					"text": "Edit Remote Text File",
					"icon": {
						"name": "open_browser.",
						"location": "top"
					},
					"on_click": {
						"type": "Clone",
						"name": "GetRemoteFilePopupScreenEditFile"
					}
				}
			},
      {
        "type": "Clone",
        "name": "HorizontalLine"
      }
   ]
  }
}