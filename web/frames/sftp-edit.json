{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Enter Remote Host File Path: \n(relative to sftp home directory)"
    },
    {
      "type": "EditText",
      "id": 999001,
      "max_length": 200,
      "is_single_line": true,
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "git-repos/eigenframe/",
      "text_color": "#ffffff",
      "background_color": "#000000",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      }
    },

    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },

    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Access file path",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "on_click": {
        "type": "JavaScript",
        "script_list": [
          "eigenActivity.showToast('eigenFragment.getViewState(999001): '+eigenFragment.getViewState(999001) )"
        ]
      }
    },

    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "execute sftp get command",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "on_click": {
        "type": "SecureFtp",
        "sftp_script": "'get ' + eigenFragment.getViewState(999001)",
        "on_complete": {
          "type": "ToastMessage",
          "message_script": "'completed: sftp get ' + eigenFragment.getViewState(999001)"
        }
      }
    },

    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "Show EigenFrame Private Files",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title": "Show EigenFrame Private Files",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text_size": "14",
                "gravity": "left",
                "text_color": "#ffffff",
                "sftp": "directory_local /data/user/0/com.sawaya.eigenframe.full/files"
              }
            ]
          }
        ]
      }
    },

    {
      "type": "Button",
      "layout_width": "wrap_content",
      "text": "edit local-cache file",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title_script": "'Edit Remote Host File: '+eigenFragment.getViewState(999001)",
        "component_list": [
          {
            "type": "TextView",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "gravity": "left",
            "text_color": "#8aec81",
            "text_size": "22",
            "text_script": "'Remote Host File: '+eigenFragment.getViewState(999001)"
          },
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "component_list": [
              {
                "type": "EditText",
                "url": "file:///data/user/0/com.sawaya.eigenframe.full/files/EditText.txt",
                "id": 999000,
                "gravity": "left",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text_color": "#ffffff",
                "x-text_size": "14",
                "background_color": "#000000"

              }
            ]
          }
        ]
      }
    },


    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "execute sftp put command",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "on_click": {
        "type": "SecureFtp",
        "sftp_script": "'put EditText.txt ' + eigenFragment.getViewState(999001)",
        "on_complete": {
          "type": "ToastMessage",
          "message_script": "'completed: put EditText.txt ' + eigenFragment.getViewState(999001)"
        }
      }
    },


    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    }

  ]
}


