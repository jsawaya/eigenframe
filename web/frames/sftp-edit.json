{
	"type": "LinearLayout",
	"scrollable": true,
	"orientation": "vertical",
	"gravity": "center_horizontal",
	"layout_width": "match_parent",
	"component_list": [
		{
			"type": "Clone",
			"name": "TextViewLabel",
			"attributes": {
				"text": "Remote file path:"
			}
		},
		{
			"type": "Clone",
			"name": "EditTextRemoteFilePath"
		},
		{
			"type": "Clone",
			"name": "HorizontalLine"
		},
		{
			"type": "Clone",
			"name": "LayoutVerticalScrollable",
			"condition_script_list": [
				"var filename = eigenFragment.getViewState(999001).toLowerCase()",
				"!(filename.endsWith('.png') || filename.endsWith('.jpg') || filename.endsWith('.jpeg'))"
			],
			"attributes": {
				"component_list": [
					{
						"type": "Clone",
						"name": "ButtonDefault",
						"attributes": {
							"text": "Show Remote File",
							"icon": {
								"name": "open_browser.",
								"location": "top"
							},
							"on_click": {
								"type": "Clone",
								"name": "PopupScreenShowRemoteFile"
							}
						}
					},
					{
						"type": "Clone",
						"name": "ButtonDefault",
						"attributes": {
							"text": "Edit Remote File",
							"icon": {
								"name": "open_browser.",
								"location": "top"
							},
							"on_click": {
								"type": "Clone",
								"name": "PopupScreenEditRemoteFile"
							}
						}
					}
				]
			}
		},
		{
			"type": "Clone",
			"name": "LayoutVerticalScrollable",
			"condition_script_list": [
				"var filename = eigenFragment.getViewState(999001).toLowerCase()",
				"filename.endsWith('.png') || filename.endsWith('.jpg') || filename.endsWith('.jpeg')"
			],
			"attributes": {
				"component_list": [
					{
						"type": "Clone",
						"name": "ButtonDefault",
						"attributes": {
							"text": "Show Remote Image",
							"icon": {
								"name": "open_browser.",
								"location": "top"
							},
							"on_click": {
								"type": "Clone",
								"name": "PopupScreenImageRemoteFile"
							}
						}
					}
				]
			}
		}
	]
}


