{
	"type": "LinearLayout",
	"scrollable": true,
	"orientation": "vertical",
	"gravity": "center_horizontal",
	"layout_width": "match_parent",
	"component_list": [
		{
			"type": "JavaScript",
			"script": "eigenFragment.setCacheString('SelectFilePrompt', 0, 'Select Remote File (sftp home)')"
		},
		{
			"type": "Clone",
			"name": "JavaScriptSelectFilePath"
		},
		{
			"type": "Clone",
			"name": "LayoutVerticalScrollable",
			"x-condition_script_list": [
				"var targetVid = eigenFragment.getIntegerVariable('TargetViewId', 0, 0)",
				"var filename = eigenFragment.getViewState(targetVid).toLowerCase()",
				"!(filename.endsWith('.png') || filename.endsWith('.jpg') || filename.endsWith('.jpeg'))"
			],
			"attributes": {
				"component_list": [
					{
						"type": "Clone",
						"name": "ButtonDefault",
						"attributes": {
							"text": "Show Remote Text File",
							"icon": {
								"name": "open_browser.",
								"location": "top"
							},
							"on_click": {
								"type": "Clone",
								"name": "PopupScreenShowRemoteFile"
							}
						}
					},
					{
						"type": "Clone",
						"name": "ButtonDefault",
						"attributes": {
							"text": "Edit Remote File",
							"icon": {
								"name": "open_browser.",
								"location": "top"
							},
							"on_click": {
								"type": "Clone",
								"name": "PopupScreenEditRemoteFile"
							}
						}
					}
				]
			}
		},
		{
			"type": "Clone",
			"name": "LayoutVerticalScrollable",
			"x-condition_script_list": [
				"var targetVid = eigenFragment.getIntegerVariable('TargetViewId', 0, 0)",
				"var filename = eigenFragment.getViewState(targetVid).toLowerCase()",
				"filename.endsWith('.png') || filename.endsWith('.jpg') || filename.endsWith('.jpeg')"
			],
			"attributes": {
				"component_list": [
					{
						"type": "Clone",
						"name": "ButtonDefault",
						"attributes": {
							"text": "Show Remote Image File",
							"icon": {
								"name": "open_browser.",
								"location": "top"
							},
							"on_click": {
								"type": "Clone",
								"name": "PopupScreenImageRemoteFile"
							}
						}
					}
				]
			}
		}
	]
}


