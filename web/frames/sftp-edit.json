{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "component_list": [

    {
      "type": "TextView",
      "layout_width": "match_parent",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Enter remote file: \n(relative to sftp home directory)"
    },

    {
      "type": "EditText",
      "id": 999001,
      "max_length": 200,
      "is_single_line": true,
      "layout_width": "match_parent",
      "text": "git-repos/eigenframe/",
      "text_color": "#ffffff",
      "background_color": "#000000",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      }
    },

    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },

    {
      "type": "Button",
      "layout_width": "match_parent",
      "text": "Show remote file",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title": "Show remote file",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text_size": "14",
                "gravity": "left",
                "text_color": "#ffffff",
                "font": "font/droid-sans-mono/DroidSansMono.ttf",
                "ssh_script": "'cat ' + eigenFragment.getViewState(999001)"
              }
            ]
          }
        ]
      }
    },


    {
      "type": "Button",
      "layout_width": "match_parent",
      "text": "Get remote file to local cache",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title": "Get remote file to local cache",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text_size": "14",
                "gravity": "left",
                "text_color": "#ffffff",
                "font": "font/droid-sans-mono/DroidSansMono.ttf",
                "sftp_script": "'get ' + eigenFragment.getViewState(999001) + ' EditText.txt'"
              }
            ]
          }
        ]
      }
    },


    {
      "type": "Button",
      "layout_width": "match_parent",
      "text": "Show local cache",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title": "Show local cache",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text_size": "14",
                "gravity": "left",
                "text_color": "#ffffff",
                "font": "font/droid-sans-mono/DroidSansMono.ttf",
                "url_script": "'file://' + eigenFragment.getCacheFilePath('EditText.txt') "
              }
            ]
          }
        ]
      }
    },


    {
      "type": "Button",
      "layout_width": "match_parent",
      "text": "Edit local cache",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title_script": "'Remote file: '+eigenFragment.getViewState(999001)",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "component_list": [
              {
                "type": "Button",
                "layout_width": "match_parent",
                "text": "Save Edits to Remote File",
                "text_color": "#ffffff",
                "gravity": "center_horizontal",
                "background_color": "#123456",
                "icon": {
                  "name": "save.",
                  "location": "top"
                },
                "margin": {
                  "left": 10,
                  "top": 10,
                  "right": 10,
                  "bottom": 10
                },
                "on_click": {
                  "type": "SecureFtp",
                  "sftp_script": "'put EditText:999000 ' + eigenFragment.getViewState(999001)",
                  "on_complete" : {
                    "type": "JavaScript",
                    "script_list": [
                      "var x1 = eigenFragment.clearCacheFile('EditText:999000')",
                      "eigenActivity.showToast('Edit Cache: ' + x1 )",
                      "var x2 = eigenFragment.clearCacheFile('EditText.txt')",
                      "eigenActivity.showToast('File Cache: ' + x2 )",
                      "eigenFragment.closePopupWindow()"
                    ]
                  }
                }
              },

              {
                "type": "Button",
                "layout_width": "match_parent",
                "text": "Cancel Local Edits",
                "text_color": "#ffffff",
                "gravity": "center_horizontal",
                "background_color": "#123456",
                "icon": {
                  "name": "cancel.",
                  "location": "top"
                },
                "margin": {
                  "left": 10,
                  "top": 10,
                  "right": 10,
                  "bottom": 10
                },
                "on_click": {
                  "type": "JavaScript",
                  "script_list": [
                    "var x1 = eigenFragment.clearCacheFile('EditText:999000')",
                    "eigenActivity.showToast('Edit Cache: ' + x1 )",
                    "eigenFragment.closePopupWindow()"
                  ]
                }
              },

              {
                "type": "EditText",
                "url_script": "'file://' + eigenFragment.getCacheFilePath('EditText.txt') ",
                "id": 999000,
                "gravity": "left",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text_color": "#ffffff",
                "background_color": "#000000"
              }
            ]
          }
        ]
      }
    }

  ]
}


