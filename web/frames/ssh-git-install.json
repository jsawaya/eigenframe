{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "component_list": [

    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Install GIT eigenframe branch"
    },


    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "font": "font/droid-sans-mono/DroidSansMono.ttf",
      "text_color": "#ffffff",
      "text_size": "14",
      "text_list": [
        "Click [Install git package]  ..."
      ]
    },
    {
      "type": "Button",
      "gravity": "center",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Install git package",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title": "Install git package",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text_size": "14",
                "text_color": "#ffffff",
                "font": "font/droid-sans-mono/DroidSansMono.ttf",
                "ssh_list": [
                  "echo pkg install git",
                  "pkg install git"
                ]
              }
            ]
          }
        ]
      }
    },


    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "font": "font/droid-sans-mono/DroidSansMono.ttf",
      "text_color": "#ffffff",
      "text_size": "14",
      "text_list": [
        "Click [Make '~/git-repos' directory] to create a place for local eigenframe git repository"
      ]
    },
    {
      "type": "Button",
      "gravity": "center",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Make git-repos directory",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title": "Make '~/git-repos' directory",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text_size": "14",
                "text_color": "#ffffff",
                "font": "font/droid-sans-mono/DroidSansMono.ttf",
                "ssh_list": [
                  "cd ~",
                  "echo mkdir git-repos",
                  "mkdir git-repos",
                  "cd git-repos",
                  "pwd"
                ]
              }
            ]
          }
        ]
      }
    },


    {
      "type": "HorizontalLine",
      "size": 3,
      "color": "#666666"
    },
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "font": "font/droid-sans-mono/DroidSansMono.ttf",
      "text_color": "#ffffff",
      "text_size": "14",
      "text_list": [
        "Click [Clone eigenframe github repository]  ..."
      ]
    },
    {
      "type": "Button",
      "gravity": "center",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Clone eigenframe github repository\n(and checkout test branch)",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "icon": {
        "name": "cloud_download.",
        "location": "top"
      },
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "14",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "title": "Clone eigenframe github repository, and checkout test branch",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text_size": "14",
                "text_color": "#ffffff",
                "font": "font/droid-sans-mono/DroidSansMono.ttf",
                "ssh_list": [
                  "cd ~/git-repos",
                  "echo git clone https://github.com/jsawaya/eigenframe",
                  "git clone https://github.com/jsawaya/eigenframe",
                  "echo ",
                  "echo cd eigenframe",
                  "cd eigenframe",
                  "echo ",
                  "echo git checkout -b test",
                  "git checkout -b test",
                  "echo ",
                  "echo git status:",
                  "git status"
                ]
              }
            ]
          }
        ]
      }
    }


  ]
}



