{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "layout-width": "match_parent",
  "layout-height": "wrap_content",
  "component-list": [
    {
      "type": "TextView",
      "layout-width": "match_parent",
      "layout-height": "wrap_content",
      "text": "Test SelectDialog",
      "text-size": "20",
      "gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
      "text-color": "#ffffff",
      "icon": {
        "name": "sawaya_eigenframe_icon.png",
        "location": "top"
      }
    },
    {
      "type": "HorizontalLine",
      "size": 1,
      "color": "#00ff00"
    },
    {
      "type": "Button",
      "layout-width": "match_parent",
      "layout-height": "wrap_content",
      "text": "Test SelectDialog",
      "text-color": "#ffffff",
      "background-color": "#22ff0000",
      "on-click": {
        "type": "SelectDialog",
        "title": "Test SelectDialog",
        "icon": {
          "name": "info.jpg"
        },
        "checked-option": 1,
        "option-list": [
          "option 0",
          "option 1",
          "option 2"
        ],
        "on-click": {
          "type": "JavaScript",
          "script-list": [
            "eigenActivity.showToast('SelectDialog: option-name: '+eigenMap.get('option-name'))"
          ]
        }
      }
    }
  ]
}
