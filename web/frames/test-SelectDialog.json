{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Test SelectDialog",
      "text_size": "14",
      "gravity": "CENTER_HORIZONTAL, CENTER_VERTICAL",
      "text_color": "#ffffff",
      "icon": {
        "name": "ic_launcher_round.",
        "location": "top"
      }
    },
    {
      "type": "HorizontalLine",
      "size": 1,
      "color": "#00ff00"
    },
    {
      "type": "Button",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "Test SelectDialog",
      "text_color": "#ffffff",
      "background_color": "#22ff0000",
      "on_click": {
        "type": "SelectDialog",
        "title": "Test SelectDialog",
        "icon": {
          "name": "info."
        },
        "checked_option": 1,
        "x-note": "SelectDialog does not yet support state (SelectDialog:id cache)",
        "option_list": [
          "option 0",
          "option 1",
          "option 2"
        ],
        "on_click": {
          "type": "JavaScript",
          "script_list": [
            "eigenActivity.showToast('SelectDialog: option: '+eigenFragment.getOptionLabel() + ', position: '+eigenFragment.getOptionPosition() )"
          ]
        }
      }
    }
  ]
}
