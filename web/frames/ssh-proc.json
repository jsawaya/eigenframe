{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "Host Processes"
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "List processes (ps -e)",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "icon": {
        "name": "info.",
        "location": "top"
      },
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupTextView",
        "title": "List Processes (ps -e)",
        "font": "font/droid-sans-mono/DroidSansMono.ttf",
        "ssh":  "ps -e"
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "List process details (ps -elf)",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "icon": {
        "name": "info.",
        "location": "top"
      },
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupTextView",
        "title": "List process details (ps -elf)",
        "font": "font/droid-sans-mono/DroidSansMono.ttf",
        "ssh": "ps -elf"
      }
    },
    {
      "type": "Button",
      "layout_width": "wrap_content",
      "layout_height": "wrap_content",
      "text": "List process commands only (ps -eo cmd)",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "icon": {
        "name": "info.",
        "location": "top"
      },
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupTextView",
        "title": "List processes (ps -eo cmd)",
        "font": "font/droid-sans-mono/DroidSansMono.ttf",
        "ssh": "ps -eo cmd",
        "x-ssh": "ps -eo cmd | grep -n 'ruby' | grep -v 'grep'"
      }
    }
  ]
}


