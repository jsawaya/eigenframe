{
  "type": "LinearLayout",
  "scrollable": true,
  "orientation": "vertical",
  "gravity": "center_horizontal",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "component_list": [
    {
      "type": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "gravity": "left",
      "text_color": "#8aec81",
      "text_size": "22",
      "text": "List Host Processes"
    },

    {
      "type": "Button",
      "gravity": "center",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "List process details (ps -elf)",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "icon": {
        "name": "info.",
        "location": "top"
      },
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "20",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "text": "List process details (ps -elf)",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text_size": "20",
                "gravity": "center",
                "text_color": "#ffffff",
                "font": "font/droid-sans-mono/DroidSansMono.ttf",
                "ssh": "ps -elf"
              }
            ]
          }
        ]
      }
    },

    {
      "type": "Button",
      "gravity": "center",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "text": "List process commands only (ps -eo cmd)",
      "text_color": "#ffffff",
      "background_color": "#123456",
      "icon": {
        "name": "info.",
        "location": "top"
      },
      "margin": {
        "left": 10,
        "top": 10,
        "right": 10,
        "bottom": 10
      },
      "on_click": {
        "type": "PopupScreen",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "text_size": "20",
        "text_color": "#ffffff",
        "background_color": "#111111",
        "text": "List process commands only (ps -eo cmd)",
        "component_list": [
          {
            "type": "LinearLayout",
            "scrollable": true,
            "orientation": "vertical",
            "gravity": "center_horizontal",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "component_list": [
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text_size": "20",
                "gravity": "center",
                "text_color": "#ffffff",
                "font": "font/droid-sans-mono/DroidSansMono.ttf",
                "ssh": "ps -eo cmd"
              }
            ]
          }
        ]
      }
    }

  ]
}


